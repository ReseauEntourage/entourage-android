<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="profile_name">
        <item name="android:textSize">@dimen/profile_name</item>
        <item name="android:fontFamily">@font/nunitosans_semibold</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="profile_pins">
        <item name="android:textSize">@dimen/profile_labels</item>
        <item name="android:fontFamily">@font/nunitosans_regular</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="profile_description">
        <item name="android:textSize">@dimen/profile_description</item>
        <item name="android:fontFamily">@font/nunitosans_italic</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="profile_information_title">
        <item name="android:textSize">@dimen/profile_labels</item>
        <item name="android:fontFamily">@font/nunitosans_regular</item>
        <item name="android:textColor">@color/orange</item>
    </style>


    <style name="profile_interest">
        <item name="android:textSize">@dimen/profile_labels</item>
        <item name="android:fontFamily">@font/nunitosans_bold</item>
        <item name="android:textColor">@color/orange</item>
    </style>

    <style name="profile_titles">
        <item name="android:textSize">@dimen/profile_titles</item>
        <item name="android:fontFamily">@font/nunitosans_bold</item>
        <item name="android:textColor">@color/orange</item>
    </style>


    <style name="profile_subtitles">
        <item name="android:textSize">@dimen/profile_titles</item>
        <item name="android:fontFamily">@font/nunitosans_light</item>
        <item name="android:textColor">@color/orange</item>
    </style>

    <style name="profile_activity_statistics">
        <item name="android:textSize">@dimen/profile_activity_statistics</item>
        <item name="android:fontFamily">@font/quicksand_bold</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="profile_activity_label">
        <item name="android:textSize">@dimen/profile_labels</item>
        <item name="android:fontFamily">@font/nunitosans_regular</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="h4">
        <item name="android:textSize">@dimen/profile_description</item>
        <item name="android:fontFamily">@font/nunitosans_regular</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="header_title">
        <item name="android:textSize">@dimen/header_title</item>
        <item name="android:fontFamily">@font/quicksand_bold</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="tab_text" parent="@android:style/TextAppearance.Widget.TabWidget">
        <item name="android:fontFamily">@font/nunitosans_bold</item>
        <item name="android:textSize">@dimen/profile_titles</item>
        <item name="android:textColor">@color/light_orange_opacity_50</item>
    </style>


    <style name="settings_items">
        <item name="android:textSize">@dimen/settings_titles</item>
        <item name="android:fontFamily">@font/nunitosans_bold</item>
    </style>

    <style name="h2">
        <item name="android:textSize">@dimen/profile_description</item>
        <item name="android:fontFamily">@font/nunitosans_bold</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="h2_white">
        <item name="android:textSize">@dimen/profile_description</item>
        <item name="android:fontFamily">@font/nunitosans_bold</item>
        <item name="android:textColor">@android:color/white</item>
    </style>


    <style name="h2_orange">
        <item name="android:textSize">@dimen/profile_description</item>
        <item name="android:fontFamily">@font/nunitosans_bold</item>
        <item name="android:textColor">@color/orange</item>
    </style>

    <style name="MySeekBar" parent="Widget.AppCompat.SeekBar">
        <item name="android:progressBackgroundTint">#f4511e</item>
        <item name="android:progressTint">#388e3c</item>
        <item name="android:colorControlActivated">#c51162</item>
    </style>


    <style name="edit_image">
        <item name="android:textSize">@dimen/profile_titles</item>
        <item name="android:fontFamily">@font/nunitosans_regular</item>
        <item name="android:textColor">@color/orange</item>
    </style>


