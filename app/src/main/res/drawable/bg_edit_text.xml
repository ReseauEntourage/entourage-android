<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" android:color="@color/custom_edittext_short_pressed" >
        <shape android:shape="rectangle" >
            <stroke
                android:width="1dp"
                android:color="@color/greyish" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
            <corners android:radius="5dp" />
        </shape>
    </item>
    <item android:color="@color/greyish" >
        <shape android:shape="rectangle" >
            <solid android:color="#FFFFFF" />
            <stroke
                android:width="0.5dp"
                android:color="@color/greyish" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
            <corners android:radius="5dp" />
        </shape>
    </item>
</selector>