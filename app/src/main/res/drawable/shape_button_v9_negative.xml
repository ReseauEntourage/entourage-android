<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="#26FF9739"> <!-- ripple orange clair (15% opacité) -->

    <!-- Zone touchée pour le ripple -->
    <item android:id="@android:id/mask">
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFFFF" /> <!-- Important : mask blanc opaque -->
            <corners android:radius="32dp"/>
        </shape>
    </item>

    <!-- Fond du bouton : transparent avec bordure orange -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent" />
            <stroke android:color="@color/orange" android:width="1dp"/>
            <corners android:radius="32dp"/>
        </shape>
    </item>
</ripple>
