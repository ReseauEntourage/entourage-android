<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <corners
                android:radius="20dp" />
            <solid
                android:color="@color/custom_button_white_disabled" />
            <padding
                android:bottom="0dp"
                android:top="0dp"
                android:left="20dp"
                android:right="20dp" />
            <stroke
                android:width="1dp"
                android:color="@color/grey_contour" />
        </shape>
    </item>
    <item android:state_pressed="true" android:state_enabled="true">
        <shape android:shape="rectangle">
            <corners
                android:radius="20dp" />
            <solid
                android:color="@color/custom_button_white_pressed" />
            <padding
                android:bottom="0dp"
                android:top="0dp"
                android:left="20dp"
                android:right="20dp" />
            <stroke
                android:width="1dp"
                android:color="@color/grey_contour" />
        </shape>
    </item>
    <item android:state_focused="true" android:state_enabled="true">
        <shape android:shape="rectangle">
            <corners
                android:radius="20dp" />
            <solid
                android:color="@color/custom_button_white_focused" />
            <padding
                android:bottom="0dp"
                android:top="0dp"
                android:left="20dp"
                android:right="20dp" />
            <stroke
                android:width="1dp"
                android:color="@color/grey_contour" />
        </shape>
    </item>
    <item android:state_enabled="true">
        <shape android:shape="rectangle">
            <corners
                android:radius="20dp" />
            <solid
                android:color="@color/custom_button_white_enabled" />
            <padding
                android:bottom="0dp"
                android:top="0dp"
                android:left="20dp"
                android:right="20dp" />
            <stroke
                android:width="1dp"
                android:color="@color/grey_contour" />
        </shape>
    </item>
</selector>