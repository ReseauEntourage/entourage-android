<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <corners
                android:radius="20dp" />
            <solid
                android:color="@color/custom_button_accent_disabled" />
            <padding
                android:bottom="7dp"
                android:top="7dp"
                android:left="40dp"
                android:right="40dp" />
        </shape>
    </item>
    <item android:state_pressed="true" android:state_enabled="true">
        <shape android:shape="rectangle">
            <corners
                android:radius="20dp" />
            <solid
                android:color="@color/custom_button_accent_pressed" />
            <padding
                android:bottom="7dp"
                android:top="7dp"
                android:left="40dp"
                android:right="40dp" />
        </shape>
    </item>
    <item android:state_focused="true" android:state_enabled="true">
        <shape android:shape="rectangle">
            <corners
                android:radius="20dp" />
            <solid
                android:color="@color/custom_button_accent_focused" />
            <padding
                android:bottom="7dp"
                android:top="7dp"
                android:left="40dp"
                android:right="40dp" />
        </shape>
    </item>
    <item android:state_enabled="true">
        <shape android:shape="rectangle">
            <corners
                android:radius="20dp" />
            <solid
                android:color="@color/custom_button_accent_enabled" />
            <padding
                android:bottom="7dp"
                android:top="7dp"
                android:left="40dp"
                android:right="40dp" />
        </shape>
    </item>
</selector>