<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <social.entourage.android.map.EntourageMapView
        android:id="@+id/layout_feed_map_card_mapview"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:longClickable="true"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/layout_feed_map_card_recenter_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_gravity="bottom|end"
        android:layout_marginStart="0dp"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="10dp"
        app:backgroundTint="@color/custom_button_white_enabled"
        app:fabSize="mini"
        app:srcCompat="@drawable/button_my_location"
        app:tint="@color/greyish_brown" />

</RelativeLayout>