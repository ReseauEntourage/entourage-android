<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
    </style>

    <!-- Dialog activity theme. -->
    <style name="CustomDialogTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:background">@color/background_light</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <!-- Dialog activity theme with no title. -->
    <style name="CustomDialogThemeNoTitle" parent="CustomDialogTheme">
        <item name="windowNoTitle">true</item>
    </style>

</resources>
