<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
    </style>

    <!-- Custom Edit Text theme for the login views. -->
    <style name="CustomEditTextTheme" parent="android:Widget.EditText">
        <item name="android:textSelectHandle">@drawable/text_select_handle_middle_login</item>
        <item name="android:textSelectHandleLeft">@drawable/text_select_handle_left_login</item>
        <item name="android:textSelectHandleRight">@drawable/text_select_handle_right_login</item>
        <item name="android:textCursorDrawable">@drawable/bg_cursor_yellow</item>
        <item name="android:background">@null</item>
        <item name="android:textColor">@color/login_edittext</item>
    </style>

    <style name="CustomEditTextThemeAccent" parent="android:Widget.EditText">
        <item name="android:textSelectHandle">@drawable/text_select_handle_middle_login</item>
        <item name="android:textSelectHandleLeft">@drawable/text_select_handle_left_login</item>
        <item name="android:textSelectHandleRight">@drawable/text_select_handle_right_login</item>
        <item name="android:textCursorDrawable">@drawable/bg_cursor_white</item>
        <item name="android:background">@null</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">@color/login_edittext_hint_alpha</item>
    </style>

    <!-- Custom TextView theme with letter spacing (large) - version < 21 (not displayed) -->
    <style name="SpacedTextViewLarge" parent="android:Widget.TextView">
    </style>

    <!-- Custom TextView theme with letter spacing (small) - version < 21 (not displayed) -->
    <style name="SpacedTextViewSmall" parent="android:Widget.TextView">
    </style>

    <!-- Dialog activity theme. -->

    <!-- Dialog activity theme with no title. -->

    <!-- Title style -->
    <style name="EntourageTitle" parent="android:Widget.TextView">
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
        <item name="android:textSize">@dimen/entourage_font_large</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:textColor">@color/greyish_brown</item>
    </style>

    <!-- Dialog fragment theme with slide from bottom animation. -->
    <style name="CustomDialogFragmentSlide" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowEnterAnimation">@anim/abc_slide_in_bottom</item>
        <item name="android:windowExitAnimation">@anim/abc_slide_out_bottom</item>
    </style>

    <!-- Dialog fragment theme with slide from right animation -->
    <style name="CustomDialogFragmentFromRight" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowEnterAnimation">@anim/slide_in_from_right</item>
        <item name="android:windowExitAnimation">@anim/slide_out_to_right</item>
    </style>

    <!-- Dialog fragment theme with fade animation. -->
    <style name="CustomDialogFragmentFade" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowEnterAnimation">@anim/abc_fade_in</item>
        <item name="android:windowExitAnimation">@anim/abc_fade_out</item>
    </style>

    <style name="AccentButton" parent="Base.Widget.AppCompat.Button">
        <item name="android:background">@drawable/bg_button_accent</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/entourage_font_large</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="AccentButton.RoundedCorners">
        <item name="android:background">@drawable/bg_button_accent_rounded</item>
    </style>

    <style name="AccentButton.BigRoundedCorners">
        <item name="android:background">@drawable/bg_button_accent_rounded_large_radius</item>
    </style>

    <style name="AccentButtonStraightTop" parent="Base.Widget.AppCompat.Button">
        <item name="android:background">@drawable/bg_button_accent_straight_top</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="WhiteButton" parent="Base.Widget.AppCompat.Button">
        <item name="android:background">@drawable/bg_button_white</item>
        <item name="android:textColor">@color/accent</item>
        <item name="android:textSize">@dimen/entourage_font_large</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="WhiteButton.RoundedCorners">
        <item name="android:background">@drawable/bg_button_white_rounded</item>
    </style>

    <style name="WhiteButton.AccentRoundedCorners">
        <item name="android:background">@drawable/bg_button_white_accent_rounded</item>
    </style>

    <style name="WhiteButton.Straight">
        <item name="android:background">@drawable/bg_button_white_straight</item>
    </style>

    <style name="WhiteButtonTransparent" parent="Base.Widget.AppCompat.Button">
        <item name="android:background">@drawable/bg_button_white_edges</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/entourage_font_large</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="ActButton" parent="Base.Widget.AppCompat.Button">
        <item name="android:background">?android:attr/selectableItemBackground</item>
        <item name="android:textColor">@drawable/button_act_text_color</item>
        <item name="android:textSize">@dimen/entourage_font_small</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="TransparentButton" parent="Base.Widget.AppCompat.Button">
        <item name="android:background">?android:attr/selectableItemBackground</item>
        <item name="android:textSize">@dimen/entourage_font_large</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="TransparentButton.Accent">
        <item name="android:textColor">@drawable/button_accent_text_color</item>
    </style>

    <style name="TransparentButton.White">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="NotificationButton" parent="Base.Widget.AppCompat.Button">
        <item name="android:background">@drawable/bg_button_notification</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/entourage_font_medium</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="NotificationButton.Small">
        <item name="android:textSize">@dimen/entourage_font_small</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="MapActionButtonStyle">
        <item name="fab_shadowColor">@android:color/transparent</item>
        <item name="fab_colorNormal">@android:color/transparent</item>
        <item name="fab_colorPressed">@android:color/transparent</item>
        <item name="fab_colorRipple">@android:color/transparent</item>
    </style>

    <!-- Style for ongoing tour marker -->
    <style name="OngoingTourMarker">
        <item name="android:textColor">@color/greyish_brown</item>
        <item name="android:textSize">@dimen/entourage_font_small</item>
    </style>

    <!-- User profile textviews -->
    <style name="UserProfileTextViewStyle" parent="android:Widget.TextView">
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
        <item name="android:textSize">@dimen/entourage_font_large</item>
        <item name="android:textColor">@color/greyish_brown</item>
    </style>

    <style name="FilterRadioButton" parent="android:Widget.CompoundButton.RadioButton">
        <item name="android:button">@null</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@drawable/rb_map_filter_textcolor</item>
        <item name="android:background">@drawable/rb_map_filter_bg</item>
    </style>

    <!-- Search edit text -->
    <style name="RoundedEditText" parent="android:Widget.EditText">
        <item name="android:background">@drawable/bg_edit_text_white_rounded_corners</item>
    </style>

    <!-- Separator with alpha -->
    <style name="SeparatorAlpha">
        <item name="android:background">@color/greyish</item>
        <item name="android:alpha">0.5</item>
    </style>

    <!-- Entourage Disclaimer -->
    <style name="EntourageDisclaimerSectionTitle" parent="android:Widget.TextView">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/greyish_brown</item>
    </style>
    <style name="EntourageDisclaimerSectionDetails" parent="android:Widget.TextView">
        <item name="android:textSize">@dimen/entourage_font_large</item>
        <item name="android:textColor">@color/greyish_brown</item>
    </style>

    <style name="EntourageGreenSwitch" parent="Theme.AppCompat.Light">
        <!-- active thumb & track color (30% transparency) -->
        <item name="colorControlActivated">#009688</item>

        <!-- inactive thumb color -->
        <item name="colorSwitchThumbNormal">#f1f1f1</item>

        <!-- inactive track color (30% transparency) -->
        <item name="android:colorForeground">#221f1f</item>
    </style>

    <style name="EntourageOSSLicenses.Theme" parent="Theme.AppCompat.Light">
        <item name="actionBarTheme">@style/EntourageOSSLicenses.ActionBarTheme</item>
    </style>

    <style name="EntourageOSSLicenses.ActionBarTheme" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@color/accent</item>
    </style>


</resources>
