<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             android:background="@drawable/login_slideshow_p4_bg"
                                             tools:context="social.entourage.android.authentification.login.slideshow.pages.LoginSlideshowPage4Fragment"
                                             tools:ignore="MissingDefaultResource">


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:contentDescription="@string/login_slideshow_p4_details"
        android:src="@drawable/login_slideshow_p4_title"
        app:layout_constraintBottom_toTopOf="@+id/login_slideshow_p4_description"/>

    <TextView
        android:id="@+id/login_slideshow_p4_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:gravity="center_horizontal"
        android:text="@string/login_slideshow_p4_details"
        android:textColor="@color/greyish_brown"
        android:textSize="17sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/login_slideshow_p4_persons"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:contentDescription="@string/empty_description"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:srcCompat="@drawable/login_slideshow_p4_bottom_grey"/>

    <ImageView
        android:id="@+id/login_slideshow_p4_persons"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="206dp"
        android:contentDescription="@string/empty_description"
        android:src="@drawable/login_slideshow_p4_persons"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="292dp"
        android:contentDescription="@string/empty_description"
        android:src="@drawable/login_slideshow_p4_tree"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
