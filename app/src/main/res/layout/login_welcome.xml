<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="16dp"
    tools:context="social.entourage.android.authentication.login.LoginActivity"
    android:background="@color/login_view">

    <ImageView
        android:id="@+id/login_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_launcher"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/toolbar"/>

    <TextView
        android:id="@+id/login_title_welcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/login_logo"
        android:layout_marginTop="10dp"
        android:text="@string/login_title_lost_code"
        android:textColor="@color/background_light"
        android:textSize="20dp"
        android:textStyle="bold"
        android:gravity="center"/>

    <RelativeLayout
        android:id="@+id/login_welcome_block"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/login_title_lost_code">

        <TextView
            android:id="@+id/login_text_welcome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:text="Merci de compléter votre profil\n\nVotre adresse nous servira à vous envoyer vos comptes rendus de maraudes"
            android:textColor="@color/background_light"
            android:gravity="center"/>

        <EditText
            android:id="@+id/login_welcome_mail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:layout_below="@id/login_text_welcome"
            android:background="@drawable/login_form"
            android:inputType="phone"
            android:hint="@string/login_hint_email"
            android:gravity="center"
            android:layout_centerHorizontal="true" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="3">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>

            <Button
                android:id="@+id/login_button_add_picture"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:layout_marginTop="30dp"
                android:layout_below="@id/login_welcome_mail"
                android:layout_centerHorizontal="true"
                android:text="Ajouter une photo"
                android:textSize="13dp"
                android:background="@drawable/login_button"
                android:textAllCaps="true"/>

        </LinearLayout>

        <Button
            android:id="@+id/login_button_lets_go"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_below="@id/login_welcome_mail"
            android:layout_centerHorizontal="true"
            android:text="C'est parti"
            android:textSize="13dp"
            android:background="@drawable/login_button"
            android:textAllCaps="true"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/login_lost_code_confirmation_block"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/login_title_lost_code"
        android:visibility="gone">

        <TextView
            android:id="@+id/login_text_confirmation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:text="Votre code vient de vous être envoyé"
            android:textColor="@color/background_light"
            android:gravity="center"/>

        <Button
            android:id="@+id/login_button_home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_below="@id/login_text_confirmation"
            android:layout_centerHorizontal="true"
            android:text="Retour à l'accueil"
            android:textSize="13dp"
            android:background="@drawable/login_button"
            android:textAllCaps="true"/>

    </RelativeLayout>


</RelativeLayout>