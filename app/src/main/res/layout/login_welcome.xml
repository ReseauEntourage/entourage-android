<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="16dp"
    tools:context="social.entourage.android.authentication.login.LoginActivity"
    android:background="@color/login_view">

    <ImageView
        android:id="@+id/login_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_launcher"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/toolbar"/>

    <TextView
        android:id="@+id/login_title_welcome_pro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/login_logo"
        android:layout_marginTop="10dp"
        android:text="@string/login_title_welcome_pro"
        android:textColor="@color/background_light"
        android:textSize="20dp"
        android:textStyle="bold"
        android:gravity="center"/>

    <TextView
        android:id="@+id/login_text_fill_in_profile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:layout_below="@id/login_title_welcome_pro"
        android:text="@string/login_text_fill_in_profile"
        android:textColor="@color/background_light"
        android:gravity="center"/>

    <EditText
        android:id="@+id/login_edit_email_profile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:layout_below="@id/login_text_fill_in_profile"
        android:background="@drawable/login_signup_form"
        android:inputType="textWebEmailAddress"
        android:hint="@string/login_hint_email"
        android:gravity="center"
        android:layout_centerHorizontal="true" />

    <LinearLayout
        android:id="@+id/login_block_add_photo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/login_edit_email_profile"
        android:orientation="horizontal"
        android:gravity="center"
        android:weightSum="3">

        <ImageView
            android:id="@+id/login_user_photo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_user_photo"
            android:layout_weight="1"/>

        <Button
            android:id="@+id/login_button_add_photo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:layout_marginLeft="20dp"
            android:text="@string/login_button_add_photo"
            android:textSize="13dp"
            android:background="@drawable/login_button"
            android:textAllCaps="true"/>

    </LinearLayout>

    <Button
        android:id="@+id/login_button_go"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_below="@id/login_block_add_photo"
        android:layout_centerHorizontal="true"
        android:text="@string/login_button_go"
        android:textSize="13dp"
        android:background="@drawable/login_button"
        android:textAllCaps="true"/>


</RelativeLayout>