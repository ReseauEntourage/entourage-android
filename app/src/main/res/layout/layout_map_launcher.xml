<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_alignParentBottom="true"
              android:gravity="center"
              android:background="@color/background">

    <RadioGroup
        android:id="@+id/launcher_tour_transport_mode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:checkedButton="@+id/launcher_tour_type_feet"
        android:layout_marginTop="10dp"
        android:background="@color/background">

        <RadioButton
            android:id="@+id/launcher_tour_type_feet"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:text="@string/tour_check_feet"
            android:button="@null"
            android:gravity="center"
            android:textSize="18sp"
            android:textColor="@drawable/textcolor_radio_tab"
            android:textAllCaps="false"
            android:drawableTop="@drawable/rb_tour_feet"
            android:checked="true"
            android:padding="10dp"/>

        <View
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:background="@color/separator" />

        <RadioButton
            android:id="@+id/launcher_tour_type_car"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:text="@string/tour_check_car"
            android:button="@null"
            android:gravity="center"
            android:textSize="18sp"
            android:textColor="@drawable/textcolor_radio_tab"
            android:textAllCaps="false"
            android:drawableTop="@drawable/rb_tour_car"
            android:checked="false"
            android:padding="10dp"/>

    </RadioGroup>


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/separator"
        />

    <RadioGroup
        android:id="@+id/launcher_tour_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:checkedButton="@+id/launcher_tour_type_medical"
        android:background="@color/background">

        <RadioButton
            android:id="@+id/launcher_tour_type_medical"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:text="@string/tour_type_medical"
            android:button="@null"
            android:padding="10dp"
            android:textSize="18sp"
            android:textColor="@drawable/textcolor_radio_tab"
            android:drawableTop="@drawable/rb_tour_medical"
            android:layout_weight="1"
            android:gravity="center"/>

        <View
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:background="@color/separator" />

        <RadioButton
            android:id="@+id/launcher_tour_type_bare_hands"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:text="@string/tour_type_bare_hands"
            android:button="@null"
            android:padding="10dp"
            android:textSize="18sp"
            android:textColor="@drawable/textcolor_radio_tab"
            android:layout_weight="1"
            android:gravity="center"
            android:drawableTop="@drawable/rb_tour_social"
            android:checked="false"/>

        <View
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:background="@color/separator" />

        <RadioButton
            android:id="@+id/launcher_tour_type_alimentary"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:text="@string/tour_type_alimentary"
            android:button="@null"
            android:textSize="18sp"
            android:textColor="@drawable/textcolor_radio_tab"
            android:gravity="center"
            android:layout_weight="1"
            android:drawableTop="@drawable/rb_tour_distributive"
            android:checked="false"
            android:padding="10dp"/>

    </RadioGroup>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/background_light">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="@string/tour_start"
            android:id="@+id/textView"
            android:layout_centerHorizontal="true"
            android:textColor="@color/greyish_brown"
            android:textSize="20sp"
            android:layout_marginTop="40dp"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/launcher_tour_go"
            android:layout_below="@+id/textView"
            android:layout_centerHorizontal="true"
            android:src="@drawable/tour_start"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="40dp"/>
    </RelativeLayout>

</LinearLayout>