<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:backgroundTint="@color/light_beige"
    >
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/button_lang"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginEnd="@dimen/entourage_margin_end"
        android:layout_marginStart="@dimen/entourage_marginstart"
        android:layout_marginTop="@dimen/entourage_marginstart"
        android:background="@drawable/language_layout_background_full"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/icon"
            android:layout_width="29dp"
            android:layout_height="29dp"
            android:layout_marginStart="@dimen/entourage_little_margin_start"
            android:scaleType="fitXY"
            android:src="@drawable/icon_fr"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"

            />

        <ImageView
            android:id="@+id/iv_button"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginEnd="25dp"
            android:src="@drawable/ic_orange_check_quality"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/entourage_margin_end"
            android:layout_marginStart="@dimen/entourage_marginstart"
            android:fontFamily="@font/nunitosans_bold"
            android:text="France"
            android:textColor="@color/black"
            android:textSize="@dimen/entourage_font_medium"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/icon"
            app:layout_constraintTop_toTopOf="parent"
            />

        <TextView
            android:id="@+id/tv_trad"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/entourage_margin_end"
            android:layout_marginStart="@dimen/entourage_little_margin_five"
            android:fontFamily="@font/nunitosans_bold"
            android:text="FranÃ§ais"
            android:textColor="@color/grey"
            android:textSize="@dimen/entourage_font_medium"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/tv_title"
            app:layout_constraintTop_toTopOf="parent"
            android:visibility="gone"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>