<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              tools:context="social.entourage.android.authentication.login.register.RegisterWelcomeFragment"
              android:orientation="vertical"
              android:background="@color/accent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/register_welcome_title_layout"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">

        <ImageButton
            android:id="@+id/register_welcome_back_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerInParent="true"
            android:background="?android:attr/selectableItemBackground"
            android:contentDescription="@string/empty_description"
            android:padding="5dp"
            android:src="@drawable/ic_back"/>

        <Button
            android:id="@+id/register_welcome_signin_button"
            style="@style/TransparentButton.White"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:layout_marginEnd="5dp"
            android:layout_marginRight="5dp"
            android:text="@string/registration_welcome_signin"
            android:textAllCaps="false"
            />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="20dp"
        android:paddingRight="20dp">

        <ImageView
            android:id="@+id/register_welcome_logo"
            android:layout_width="50dp"
            android:layout_height="74dp"
            android:contentDescription="@string/empty_description"
            android:src="@drawable/entourage_logo_white"/>

        <TextView
            android:id="@+id/register_welcome_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/register_welcome_start_button"
            android:layout_below="@+id/register_welcome_title"
            android:layout_marginTop="5dp"
            android:text="@string/registration_welcome_description"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/white"
            android:textColorLink="@color/white"
            android:textSize="@dimen/entourage_font_medium"/>

        <Button
            android:id="@+id/register_welcome_start_button"
            style="@style/WhiteButton.RoundedCorners"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="10dp"
            android:text="@string/registration_welcome_start"/>

        <TextView
            android:id="@+id/register_welcome_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/register_welcome_logo"
            android:text="@string/registration_welcome_title"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/white"
            android:textSize="@dimen/entourage_font_xtra_large"/>

    </RelativeLayout>

</LinearLayout>
