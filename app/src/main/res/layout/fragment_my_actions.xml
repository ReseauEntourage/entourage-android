<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_light"
    style="@style/AppMaterial"
    tools:context=".mainprofile.MyActionsFragment">

    <social.entourage.android.tools.view.CustomTitleView
        android:id="@+id/customTitleView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:entourageTitle=""
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/ui_tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/myActions"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/customTitleView3"
        app:layout_constraintEnd_toEndOf="@+id/customTitleView3"
        app:layout_constraintStart_toStartOf="@+id/customTitleView3"
        app:layout_constraintTop_toTopOf="@+id/customTitleView3" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/ui_recyclerView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/customTitleView3">

    </androidx.recyclerview.widget.RecyclerView>

    <ProgressBar
        android:id="@+id/ui_progress"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/ui_recyclerView"
        app:layout_constraintEnd_toEndOf="@+id/ui_recyclerView"
        app:layout_constraintStart_toStartOf="@+id/ui_recyclerView"
        app:layout_constraintTop_toTopOf="@+id/ui_recyclerView" />

</androidx.constraintlayout.widget.ConstraintLayout>