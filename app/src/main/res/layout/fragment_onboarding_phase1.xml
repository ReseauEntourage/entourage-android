<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".onboarding.onboard.OnboardingPhase1Fragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="16dp"
            android:paddingEnd="16dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginStart="32dp"
                    android:layout_marginTop="16dp"
                    android:fontFamily="@font/quicksand_bold"
                    android:text="@string/onboard_welcome_title_firstname"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <EditText
                    android:id="@+id/ui_onboard_names_et_firstname"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="32dp"
                    android:backgroundTint="@color/orange_opacity_50"
                    android:ems="10"
                    android:fontFamily="@font/nunitosans_regular"
                    android:hint="@string/onboard_welcome_placeholder_firstname"
                    android:inputType="textCapSentences"
                    android:paddingStart="0dp"
                    android:paddingEnd="12dp"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView2" />

                <TextView
                    android:id="@+id/error_message_firstname"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:fontFamily="@font/nunitosans_regular"
                    android:text="@string/user_edit_profile_invalid_firstname"
                    android:textColor="@color/tomato"
                    android:textSize="12sp"
                    android:visibility="gone"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="@+id/ui_onboard_names_et_firstname"
                    app:layout_constraintTop_toBottomOf="@+id/ui_onboard_names_et_firstname"
                    tools:visibility="visible" />

                <ImageView
                    android:id="@+id/imageView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/new_icn_profile_orange"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView2" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/textView35"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="32dp"
                    android:layout_marginTop="24dp"
                    android:fontFamily="@font/quicksand_bold"
                    android:text="@string/onboard_welcome_title_lastname"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <EditText
                    android:id="@+id/ui_onboard_names_et_lastname"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="32dp"
                    android:backgroundTint="@color/orange_opacity_50"
                    android:ems="10"
                    android:fontFamily="@font/nunitosans_regular"
                    android:hint="@string/onboard_welcome_placeholder_lastname"
                    android:imeOptions="actionDone"
                    android:inputType="textCapSentences"
                    android:paddingStart="0dp"
                    android:paddingEnd="12dp"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView35" />

                <TextView
                    android:id="@+id/error_message_lastname"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="32dp"
                    android:layout_marginTop="5dp"
                    android:fontFamily="@font/nunitosans_regular"
                    android:text="@string/user_edit_profile_invalid_firstname"
                    android:textColor="@color/tomato"
                    android:textSize="12sp"
                    android:visibility="gone"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/ui_onboard_names_et_lastname"
                    tools:visibility="visible" />

                <TextView
                    android:id="@+id/ui_onboard_names_tv_info"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="32dp"
                    android:fontFamily="@font/nunitosans_regular"
                    android:text="@string/onboard_welcome_info"
                    android:textColor="@color/pre_onboard_black"
                    android:textSize="13sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/error_message_lastname" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/constraintLayout17"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <social.entourage.android.tools.view.countrycodepicker.CountryCodePicker
                    android:id="@+id/ui_onboard_phone_ccp_code"
                    style="@style/input"
                    android:layout_width="40dp"
                    android:layout_height="32dp"
                    android:layout_marginStart="32dp"
                    android:layout_marginTop="5dp"
                    android:backgroundTint="@color/light_orange_opacity_50"
                    android:gravity="center_horizontal|center_vertical"
                    app:ccp_alternative_layout="false"
                    app:ccp_backgroundColor="@color/partner_logo_transparent"
                    app:ccp_defaultNameCode="FR"
                    app:ccp_hideNameCode="true"
                    app:ccp_hidePhoneCode="true"
                    app:ccp_selectionDialogShowSearch="false"
                    app:ccp_showFlag="false"
                    app:ccp_textColor="@color/pre_onboard_black"
                    app:ccp_textSize="14sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView7" />


                <EditText
                    android:id="@+id/ui_onboard_phone_et_phone"
                    style="@style/input"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:autofillHints="phoneNumber"
                    android:backgroundTint="@color/light_orange_opacity_50"
                    android:hint="@string/onboard_welcome_placeholder_phone"
                    android:inputType="phone"
                    android:maxLines="1"
                    android:paddingTop="0dp"
                    android:textSize="15sp"
                    app:layout_constraintBottom_toTopOf="@+id/error_message_phone"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/ui_onboard_phone_ccp_code"
                    app:layout_constraintTop_toTopOf="@+id/ui_onboard_phone_ccp_code" />

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:fontFamily="@font/quicksand_bold"
                    android:text="@string/onboard_welcome_title_country"
                    android:textColor="@color/pre_onboard_black"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="@+id/ui_onboard_phone_ccp_code"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/textView9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/quicksand_bold"
                    android:text="@string/onboard_welcome_title_phone"
                    android:textColor="@color/onboard_black_36"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="@+id/textView7"
                    app:layout_constraintStart_toStartOf="@+id/ui_onboard_phone_et_phone"
                    app:layout_constraintTop_toTopOf="@+id/textView7" />

                <ImageView
                    android:id="@+id/imageView40"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/ui_onboard_phone_ccp_code"
                    app:srcCompat="@drawable/new_phone" />

                <TextView
                    android:id="@+id/error_message_phone"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="32dp"
                    android:fontFamily="@font/nunitosans_regular"
                    android:text="@string/user_edit_profile_invalid_firstname"
                    android:textColor="@color/tomato"
                    android:textSize="12sp"
                    android:visibility="gone"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    tools:visibility="visible" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/imageView4"
                    android:layout_width="20dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView3"
                    app:srcCompat="@drawable/new_email" />

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="48dp"
                    android:text="@string/onboard_welcome_title_email"
                    android:textColor="@color/onboard_black_36"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="@+id/ui_onboard_email"
                    app:layout_constraintTop_toTopOf="parent" />

                <EditText
                    android:id="@+id/ui_onboard_email"
                    style="@style/input"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="32dp"
                    android:layout_marginTop="5dp"
                    android:autofillHints="textEmailAddress"
                    android:backgroundTint="@color/light_orange_opacity_50"
                    android:hint="@string/onboard_welcome_placeholder_email"
                    android:inputType="textEmailAddress"
                    android:maxLines="1"
                    android:paddingTop="0dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView3" />

                <TextView
                    android:id="@+id/error_message_email"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="32dp"
                    android:fontFamily="@font/nunitosans_regular"
                    android:text="@string/user_edit_profile_invalid_firstname"
                    android:textColor="@color/tomato"
                    android:textSize="12sp"
                    android:visibility="gone"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/ui_onboard_email"
                    tools:visibility="visible" />

                <CheckBox
                    android:id="@+id/ui_onboard_consent_check"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:buttonTint="@color/orange"
                    android:checked="false"
                    app:layout_constraintStart_toStartOf="@+id/ui_onboard_email"
                    app:layout_constraintTop_toBottomOf="@+id/error_message_email" />

                <TextView
                    android:id="@+id/ui_onboard_names_tv_info2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginBottom="16dp"
                    android:fontFamily="@font/nunitosans_regular"
                    android:text="@string/onboard_welcome_consent"
                    android:textColor="@color/pre_onboard_black"
                    android:textSize="13sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/ui_onboard_consent_check"
                    app:layout_constraintTop_toTopOf="@+id/ui_onboard_consent_check" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginBottom="16dp"
                    android:background="@drawable/bg_onboard_consent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <TextView
                        android:id="@+id/ui_onboard_names_tv_info3"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginEnd="16dp"
                        android:layout_marginBottom="8dp"
                        android:fontFamily="@font/nunitosans_regular"
                        android:text="@string/onboard_welcome_info_mandatory"
                        android:textColor="@color/pre_onboard_black"
                        android:textSize="12sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>


        </LinearLayout>
    </ScrollView>
</FrameLayout>