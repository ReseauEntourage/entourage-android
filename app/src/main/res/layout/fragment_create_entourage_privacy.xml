<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/pale_grey"
              android:orientation="vertical"
              tools:context=".entourage.create.CreateEntourageTitleFragment">

    <social.entourage.android.tools.view.CustomTitleView
        android:id="@+id/customTitleView2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:entourageTitle=""
        app:entourageTitleAction=""
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/ui_layout_privacyAction_public"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:background="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/customTitleView2">

        <ImageView
            android:id="@+id/imageViewActionPublic"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/bg_partner_logo_bordered" />

        <ImageView
            android:id="@+id/ui_iv_button_public"
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:background="@drawable/carousel_bullet_filled"
            app:layout_constraintBottom_toBottomOf="@+id/imageViewActionPublic"
            app:layout_constraintEnd_toEndOf="@+id/imageViewActionPublic"
            app:layout_constraintStart_toStartOf="@+id/imageViewActionPublic"
            app:layout_constraintTop_toTopOf="@+id/imageViewActionPublic" />

        <TextView
            android:id="@+id/ui_tv_entourage_privacyAction_public_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="16dp"
            android:text="@string/entourage_create_privacy_public"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/greyish_brown"
            android:textSize="@dimen/entourage_font_medium"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/ui_tv_entourage_privacyAction_public"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            android:text="@string/entourage_create_privacy_description_public_action"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/greyish_brown"
            android:textSize="@dimen/entourage_font_medium"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/imageViewActionPublic"
            app:layout_constraintStart_toStartOf="@+id/ui_tv_entourage_privacyAction_public_title"
            app:layout_constraintTop_toBottomOf="@+id/ui_tv_entourage_privacyAction_public_title" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/ui_layout_privacyAction_private"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:background="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ui_layout_privacyAction_public">

        <ImageView
            android:id="@+id/imageViewActionPrivate"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/bg_partner_logo_bordered" />

        <ImageView
            android:id="@+id/ui_iv_button_private"
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:background="@drawable/circle_white_plain"
            app:layout_constraintBottom_toBottomOf="@+id/imageViewActionPrivate"
            app:layout_constraintEnd_toEndOf="@+id/imageViewActionPrivate"
            app:layout_constraintStart_toStartOf="@+id/imageViewActionPrivate"
            app:layout_constraintTop_toTopOf="@+id/imageViewActionPrivate" />

        <TextView
            android:id="@+id/ui_tv_entourage_privacyAction_private_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="16dp"
            android:text="@string/entourage_create_privacy_private"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/greyish_brown"
            android:textSize="@dimen/entourage_font_medium"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/ui_tv_entourage_privacyAction_private"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            android:text="@string/entourage_create_privacy_description_private_action"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/greyish_brown"
            android:textSize="@dimen/entourage_font_medium"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/imageViewActionPrivate"
            app:layout_constraintStart_toStartOf="@+id/ui_tv_entourage_privacyAction_private_title"
            app:layout_constraintTop_toBottomOf="@+id/ui_tv_entourage_privacyAction_private_title" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
