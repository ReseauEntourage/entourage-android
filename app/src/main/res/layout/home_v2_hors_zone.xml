<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/layout_item_hz"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginStart="@dimen/entourage_marginstart"
    android:layout_marginEnd="@dimen/entourage_margin_end"
    android:layout_marginTop="@dimen/entourage_little_margin_start"
    android:background="@drawable/shape_hz_item_home_v2">
    <ImageView
        android:layout_width="42dp"
        android:layout_height="38dp"
        android:id="@+id/iv_hz_item"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="@dimen/entourage_marginstart"
        android:layout_marginTop="@dimen/entourage_margin_top"
        android:src="@drawable/ic_horszone_home_v2"
        />
    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/tv_title_hz_item"
        app:layout_constraintStart_toEndOf="@+id/iv_hz_item"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="@dimen/entourage_little_margin_five"
        android:layout_marginEnd="@dimen/entourage_margin_start_inner_item"
        app:layout_constraintTop_toTopOf="@+id/iv_hz_item"
        app:layout_constraintBottom_toBottomOf="@+id/iv_hz_item"
        android:text="@string/home_v2_hz_item_title"
        android:textSize="@dimen/entourage_font_large"
        android:fontFamily="@font/quicksand_bold"
        android:textColor="@color/white"/>
    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/tv_subtitle_hz_item"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_title_hz_item"
        android:layout_marginStart="@dimen/entourage_little_margin_start"
        android:layout_marginEnd="@dimen/entourage_little_margin_start"
        android:layout_marginTop="@dimen/entourage_margin_start_inner_item"
        android:text="@string/home_v2_hz_item_subtitle"
        android:textSize="@dimen/entourage_font_medium"
        android:fontFamily="@font/nunitosans_regular"
        android:textColor="@color/white"/>

    <Button
        android:layout_width="180dp"
        android:layout_height="32dp"
        android:id="@+id/button_hz_item"
        android:background="@drawable/shape_button_hz_item_home_v2"
        android:textColor="@color/orange"
        android:text="@string/home_v2_hz_item_button"
        android:paddingStart="@dimen/entourage_little_margin_five"
        android:paddingEnd="@dimen/entourage_little_margin_five"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_subtitle_hz_item"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="@dimen/entourage_margin_start_inner_item"
        android:layout_marginBottom="16dp"
        android:textSize="@dimen/entourage_font_medium"
        android:fontFamily="@font/nunitosans_regular"
        android:textAllCaps="false"
        />



</androidx.constraintlayout.widget.ConstraintLayout>