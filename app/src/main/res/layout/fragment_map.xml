<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="gone">

        <RelativeLayout
            android:id="@+id/fragment_map_main_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:orientation="vertical"
            android:weightSum="8">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/fragment_map_tours_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"/>

            <Button
                android:id="@+id/fragment_map_new_entourages_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginTop="20dp"
                android:background="@drawable/new_entourages"
                android:drawableLeft="@drawable/arrow_new_entourages"
                android:drawableStart="@drawable/arrow_new_entourages"
                android:paddingEnd="10dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingStart="10dp"
                android:text="@string/activity_map_new_entourages"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/fragment_map_empty_list"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/fragment_map_tours_view"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:text="@string/map_empty_newsfeed"
                android:textColor="@color/black"
                android:textSize="@dimen/entourage_font_medium"
                android:visibility="gone"/>

            <ImageButton
                android:id="@+id/fragment_map_filter_button"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginEnd="0dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="0dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:background="?android:attr/selectableItemBackground"
                android:contentDescription="@string/empty_description"
                android:scaleType="centerInside"
                app:srcCompat="@drawable/ic_filters_black"/>

            <ImageButton
                android:id="@+id/fragment_map_follow_button"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginEnd="10dp"
                android:layout_marginLeft="0dp"
                android:layout_marginRight="10dp"
                android:layout_marginStart="0dp"
                android:layout_marginTop="10dp"
                android:background="?android:attr/selectableItemBackground"
                android:contentDescription="@string/empty_description"
                android:scaleType="centerInside"
                app:srcCompat="@drawable/ic_position"/>

            <ToggleButton
                android:id="@+id/fragment_map_display_toggle"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:background="?android:attr/selectableItemBackground"
                android:button="@drawable/bg_map_type_tab"
                android:checked="false"
                android:textOff=""
                android:textOn=""/>

        </RelativeLayout>

        <view
            android:id="@+id/fragment_map_entourage_mini_cards"
            class="social.entourage.android.map.entourage.minicards.EntourageMiniCardsView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginBottom="10dp"
            android:visibility="invisible"/>

        <LinearLayout
            android:id="@+id/fragment_map_gps_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_clickable_layout_gps"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="gone">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:text="@string/map_gps_unavailable"
                android:textColor="@android:color/white"
                android:textSize="@dimen/entourage_font_small"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/fragment_map_empty_list_popup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="50dp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:layout_marginStart="50dp"
            android:layout_marginTop="100dp"
            android:background="@drawable/rounded_dialog"
            android:orientation="vertical"
            android:visibility="gone"
            >

            <ImageView
                android:id="@+id/fragment_map_empty_list_popup_close"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="0dp"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="0dp"
                android:layout_marginStart="3dp"
                android:layout_marginTop="3dp"
                android:contentDescription="@string/empty_description"
                android:padding="3dp"
                android:src="@drawable/ic_close_white"/>

            <TextView
                android:id="@+id/fragment_map_empty_list_popup_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:paddingBottom="15dp"
                android:paddingEnd="10dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingStart="10dp"
                android:paddingTop="4dp"
                android:text="@string/map_empty_newsfeed_popup"
                android:textColor="@color/white"
                android:textColorLink="@color/white"
                android:textSize="@dimen/entourage_font_medium"/>
        </LinearLayout>

        <com.github.clans.fab.FloatingActionMenu
            android:id="@+id/map_fab_menu"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_gravity="end"
            android:paddingBottom="5dp"
            android:paddingEnd="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingStart="10dp"
            app:menu_backgroundColor="@color/white_88"
            app:menu_colorNormal="@color/accent"
            app:menu_colorPressed="@color/accent"
            app:menu_colorRipple="@color/accent"
            app:menu_labels_singleLine="true"
            app:menu_labels_style="@style/MapActionLabelStyle"
            app:menu_shadowRadius="2dp"
            app:menu_shadowXOffset="0dp"
            app:menu_shadowYOffset="0dp">

            <com.github.clans.fab.FloatingActionButton
                android:id="@+id/button_poi_launcher"
                style="@style/MapActionButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_solidarity"
                android:visibility="gone"
                app:fab_label="@string/map_poi_launcher_button"
                app:fab_size="mini"/>

            <com.github.clans.fab.FloatingActionButton
                android:id="@+id/button_poi_propose"
                style="@style/MapActionButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_solidarity"
                android:visibility="gone"
                app:fab_label="@string/map_poi_propose_button"
                app:fab_size="mini"/>

            <com.github.clans.fab.FloatingActionButton
                android:id="@+id/button_create_entourage"
                style="@style/MapActionButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_entourage_contribution"
                app:fab_label="@string/entourage_create_menu"
                app:fab_size="mini"/>

        </com.github.clans.fab.FloatingActionMenu>

        <include
            android:id="@+id/layout_map_longclick"
            layout="@layout/layout_map_longclick"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"/>

    </RelativeLayout>

    <include
        android:id="@+id/layout_map_launcher"
        layout="@layout/layout_map_launcher"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="@dimen/newsfeed_map_height"
        android:visibility="gone"/>

    <LinearLayout
        android:id="@+id/layout_map_underconstruction"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:clickable="true"
        android:orientation="vertical">

        <TextView
            android:id="@+id/underconstruction_title"
            android:layout_width="match_parent"
            android:layout_height="@dimen/top_bar_height"
            android:background="@color/accent_dark"
            android:padding="10dp"
            android:text="@string/map_underconstruction_title"
            android:textAllCaps="true"
            android:textColor="@color/white"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/background_accent_dark_translucent"
            android:orientation="vertical"
            android:paddingBottom="40dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingTop="40dp">

            <TextView
                android:id="@+id/underconstruction_explanation1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/map_underconstruction_explanation_1"
                android:textColor="@color/text_dark"/>

            <TextView
                android:id="@+id/underconstruction_explanation2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/entourage_padding_10"
                android:text="@string/map_underconstruction_explanation_2"
                android:textColor="@color/accent_dark"/>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
