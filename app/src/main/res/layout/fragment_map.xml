<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/layout_map_launcher">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="8">

            <fragment android:id="@+id/fragment_map"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                class="com.google.android.gms.maps.SupportMapFragment"
                      android:layout_weight="2"/>

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:id="@+id/scrollView"
                android:layout_weight="5">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/layout_tours"
                    android:paddingBottom="5dp">

                </LinearLayout>
            </ScrollView>

        </LinearLayout>

        <ImageButton
            android:id="@+id/fragment_map_follow_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:alpha="0.5"
            android:layout_gravity="end|top"
            android:src="@drawable/ic_action_center_map"/>

        <ImageView
            android:id="@+id/fragment_map_pin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/pointer"
            android:layout_gravity="center"
            android:paddingBottom="35dp"
            android:visibility="invisible"/>

        <Button
            style="@style/AccentButton"
            android:id="@+id/button_start_tour_launcher"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_gravity="center_horizontal|bottom"
            android:layout_marginBottom="10dp"
            android:alpha="0.8"
            android:text="@string/tour_create"/>

        <include
            layout="@layout/layout_map_tour"
            android:id="@+id/layout_map_tour"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:visibility = "gone" />

    </FrameLayout>

    <include
        layout="@layout/layout_map_launcher"
        android:id="@+id/layout_map_launcher"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility = "gone" />

</RelativeLayout>
