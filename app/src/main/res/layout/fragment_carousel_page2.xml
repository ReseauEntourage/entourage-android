<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              tools:context="social.entourage.android.carousel.pages.CarouselPage2Fragment">

    <ImageView
        android:id="@+id/carousel_p2_map_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:adjustViewBounds="true"
        android:contentDescription="@string/empty_description"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/carousel_p2_map"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginEnd="@dimen/carousel_padding"
        android:layout_marginLeft="@dimen/carousel_padding"
        android:layout_marginRight="@dimen/carousel_padding"
        android:layout_marginStart="@dimen/carousel_padding"
        android:layout_weight="2"
        android:orientation="vertical">

        <TextView
            android:id="@+id/carousel_p2_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/carousel_padding"
            android:gravity="center"
            android:text="@string/carousel_p2_title"
            android:textColor="@color/greyish_brown"
            android:textSize="@dimen/carousel_title"
            android:textStyle="bold"/>

        <social.entourage.android.view.HtmlTextView
            android:id="@+id/carousel_p2_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:textColor="@color/greyish_brown"
            android:textSize="@dimen/carousel_content"
            app:htmlText="@string/carousel_p2_content"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="14dp"
            app:srcCompat="@drawable/carousel_p2_tabs"/>

    </LinearLayout>

</LinearLayout>
