<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
                xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              tools:context="social.entourage.android.carousel.pages.CarouselPage2Fragment"
    >

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/carousel_p2_map"
        android:id="@+id/carousel_p2_map_view"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:adjustViewBounds="true"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerInParent="true"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp">

        <TextView
            android:text="@string/carousel_p2_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/carousel_p2_title"
            android:textStyle="bold"
            android:textColor="@color/greyish_brown"
            android:textSize="@dimen/carousel_title"/>
        <TextView
            android:text="@string/carousel_p2_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/carousel_p2_content"
            android:textColor="@color/greyish_brown"
            android:textSize="@dimen/carousel_content"
            android:layout_marginTop="10dp"
            />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="80dp">

        <ImageView
            android:layout_width="16dp"
            android:layout_height="16dp"
            app:srcCompat="@drawable/carousel_bullet_empty"
            android:id="@+id/carousel_p2_b1"
            />
        <ImageView
            android:layout_width="16dp"
            android:layout_height="16dp"
            app:srcCompat="@drawable/carousel_bullet_filled"
            android:id="@+id/carousel_p2_b2"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"/>
        <ImageView
            android:layout_width="16dp"
            android:layout_height="16dp"
            app:srcCompat="@drawable/carousel_bullet_empty"
            android:id="@+id/carousel_p2_b3"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"/>
        <ImageView
            android:layout_width="16dp"
            android:layout_height="16dp"
            app:srcCompat="@drawable/carousel_bullet_empty"
            android:id="@+id/carousel_p2_b4"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"/>
    </LinearLayout>

</RelativeLayout>
