<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:paddingBottom="8dp">

    <ImageView
        android:id="@+id/image_post"
        android:layout_width="25dp"
        android:layout_height="25dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@drawable/new_illu_header_group" />

    <TextView
        android:id="@+id/comment_post"
        style="@style/left_courant_black"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/image_post"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Ut urna orci, aliquam !Ut urna orci, aliquam !Ut urna orci, aliquam !Ut urna orci, aliquam !Ut urna orci, aliquam !Ut urna orci, aliquam !Ut urna orci, aliquam !Ut urna orci, aliquam !Ut urna orci, aliquam !Ut urna orci, aliquam !Ut urna orci, aliquam !Ut urna orci, aliquam !Ut urna orci, aliquam !Ut urna orci, aliquam !Ut urna orci, aliquam !" />

    <ImageView
        android:id="@+id/photo_post"
        android:layout_width="0dp"
        android:layout_height="162dp"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:src="@drawable/new_illu_header_group"
        app:layout_constraintEnd_toEndOf="@+id/comment_post"
        app:layout_constraintStart_toStartOf="@+id/comment_post"
        app:layout_constraintTop_toBottomOf="@+id/comment_post" />

    <LinearLayout
        android:id="@+id/information_layout_post"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="16dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@id/comment_post"
        app:layout_constraintTop_toBottomOf="@+id/photo_post"
        tools:visibility="visible">

        <TextView
            android:id="@+id/author_name_post"
            style="@style/group_member_subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="3dp"
            android:textSize="12sp"
            tools:text="John Doe" />

        <TextView
            android:id="@+id/publication_date_post"
            style="@style/group_member_subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            tools:text="le 15.01.21" />
    </LinearLayout>

    <FrameLayout
        android:id="@+id/frameLayout"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/accent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>