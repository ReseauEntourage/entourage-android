<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="8dp"
    android:background="@drawable/new_bg_rounded_beige"
    android:elevation="1dp"
    android:padding="28dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:id="@+id/author_information"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/image"
                android:layout_width="25dp"
                android:layout_height="25dp"
                tools:src="@drawable/new_illu_header_group" />

            <LinearLayout
                android:id="@+id/information"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/name"
                    style="@style/left_h2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="John Doe" />

                <TextView
                    android:id="@+id/date"
                    style="@style/left_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="12.01.22" />
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/post_message"
            style="@style/left_courant_black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            tools:text="Bienvenue à toi cher danseur !
Nous sommes prêt pour les beaux jours ! :-)" />

        <ImageView
            android:id="@+id/photo_post"
            android:layout_width="match_parent"
            android:layout_height="185dp"
            android:layout_marginTop="16dp"
            android:gravity="center"
            android:src="@drawable/new_illu_header_group" />

        <LinearLayout
            android:id="@+id/post_comments_number_layout"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="end"
            android:layout_marginTop="20dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/new_comments" />

            <TextView
                android:id="@+id/post_no_comments"
                style="@style/left_default"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/no_comments"
                android:visibility="gone" />

            <TextView
                android:id="@+id/post_comments_number"
                style="@style/input"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                tools:text="Pas de commentaires" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/post_comment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="end"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingVertical="12dp"
            android:weightSum="1">

            <TextView
                android:id="@+id/comment"
                style="@style/left_courant_orange"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/new_bg_rounded_button_orange_stroke_transparent"
                android:padding="13dp"
                android:text="@string/discuss"
                tools:text="@string/discuss" />

            <ImageButton
                android:layout_width="46dp"
                android:layout_height="46dp"
                android:layout_marginStart="7dp"
                android:background="@drawable/new_circle_orange_button_fill"
                android:clickable="false"
                android:gravity="end"
                android:paddingVertical="10dp"
                android:src="@drawable/new_contact_white"
                app:shapeAppearanceOverlay="@drawable/new_circle_orange_button_fill" />

        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>