<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/rounded_borders_white"
    android:layout_margin="20dp"
    tools:context=".guide.poi.ReadPoiActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal">

                <TextView
                    android:id="@+id/textview_poi_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:background="@drawable/bg_edit_text"/>

                <TextView
                    android:id="@+id/textview_poi_description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:textSize="15sp"/>

                <Button
                    style="@style/AccentButton"
                    android:id="@+id/button_poi_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:autoLink="phone"
                    android:visibility="gone"
                    android:layout_marginTop="10dp" />

                <Button
                    style="@style/AccentButton"
                    android:id="@+id/button_poi_mail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:autoLink="email"
                    android:visibility="gone"
                    android:layout_marginTop="10dp" />

                <Button
                    style="@style/AccentButton"
                    android:id="@+id/button_poi_web"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:autoLink="web"
                    android:visibility="gone"
                    android:layout_marginTop="10dp" />

                <Button
                    style="@style/AccentButton"
                    android:id="@+id/button_poi_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:layout_marginTop="10dp" />

            </LinearLayout>

    </ScrollView>

</LinearLayout>