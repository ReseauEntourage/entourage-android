<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="8dp"
    android:background="@drawable/new_bg_rounded_beige"
    android:elevation="1dp"
    android:padding="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:id="@+id/author_information"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/image"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/welcome_two_profile" />

            <LinearLayout
                android:id="@+id/information"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:orientation="vertical">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/name"
                        style="@style/left_h2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        android:text="Eric D."/>

                    <Button
                        android:layout_width="40dp"
                        android:layout_height="0dp"
                        android:id="@+id/btn_report_post"
                        app:layout_constraintTop_toTopOf="@+id/name"
                        app:layout_constraintBottom_toBottomOf="@+id/name"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:text="..."
                        android:textColor="@color/grey"
                        android:background="@color/transparent"/>

                </androidx.constraintlayout.widget.ConstraintLayout>

                <TextView
                    android:id="@+id/date"
                    style="@style/left_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="12.01.22" />
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/post_message"
            style="@style/left_courant_black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:autoLink="web"
            android:layout_marginTop="8dp"
            android:text="@string/welcome_card_example_card_content" />

        <ImageView
            android:id="@+id/photo_post"
            android:layout_width="match_parent"
            android:layout_height="185dp"
            android:layout_marginTop="16dp"
            android:gravity="center"
            android:src="@drawable/welcome_two_group_example" />

        <LinearLayout
            android:id="@+id/post_comments_number_layout"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="end"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/post_no_comments"
                style="@style/left_default"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/no_comments"
                android:visibility="gone" />

            <TextView
                android:id="@+id/post_comments_number"
                style="@style/input"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                tools:text="Pas de commentaires" />
        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>