<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/newsfeed_bottom_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/pale_grey"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingBottom="10dp"
        android:paddingEnd="85dp"
        android:paddingLeft="10dp"
        android:paddingRight="85dp"
        android:paddingStart="10dp"
        android:paddingTop="10dp">

        <LinearLayout
            android:id="@+id/newsfeed_load_more_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <TextView
                android:id="@+id/newsfeed_load_more_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="@string/newsfeed_load_more_description"
                android:textColor="@color/greyish_brown"
                android:textSize="@dimen/entourage_font_medium"/>

            <TextView
                android:id="@+id/newsfeed_load_more"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:gravity="center_horizontal"
                android:text="@string/newsfeed_load_more_button"
                android:textColor="@color/accent"
                android:textSize="@dimen/entourage_font_medium"/>
        </LinearLayout>

        <TextView
            android:id="@+id/newsfeed_no_items"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="10dp"
            android:gravity="center_horizontal"
            android:text="@string/map_empty_newsfeed"
            android:textColor="@color/greyish_brown"
            android:textSize="@dimen/entourage_font_medium"/>

    </LinearLayout>
</FrameLayout>