<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:alpha="0.88"
    android:background="@color/white">

    <RelativeLayout
        android:id="@+id/map_longclick_buttons"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="46dp"
            android:layout_height="46dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="30dp"
            android:layout_marginTop="30dp"
            android:contentDescription="@string/empty_description"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/heatzone_small" />

        <ImageView
            android:id="@+id/map_longclick_button_start_tour_launcher"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:contentDescription="@string/empty_description"
            android:src="@drawable/ic_button_create_maraude"
            android:visibility="visible" />

        <ImageView
            android:id="@+id/map_longclick_button_create_encounter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:contentDescription="@string/empty_description"
            android:src="@drawable/ic_encounter"
            android:visibility="visible" />

        <ImageView
            android:id="@+id/map_longclick_button_entourage_action"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            android:layout_toEndOf="@+id/map_longclick_button_start_tour_launcher"
            android:contentDescription="@string/empty_description"
            android:src="@drawable/ic_entourage_contribution" />
    </RelativeLayout>
</RelativeLayout>