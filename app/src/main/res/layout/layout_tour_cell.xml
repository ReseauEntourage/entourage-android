<?xml version="1.0" encoding="utf-8"?>
<social.entourage.android.map.tour.TourListItemView xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
            android:rowCount="5"
            android:columnCount="3"
            android:paddingBottom="5dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium Text"
        android:id="@+id/tour_cell_title"
        android:layout_row="0"
        android:layout_columnSpan="2"/>

    <ImageView
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:id="@+id/tour_cell_photo"
        android:layout_gravity="right"
        android:layout_rowSpan="2"
        android:src="@drawable/ic_user_photo"
        android:paddingTop="3dp"
        android:paddingRight="3dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Small Text"
        android:id="@+id/tour_cell_author"
        android:layout_columnSpan="2"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Small Text"
        android:id="@+id/tour_cell_location"
        android:layout_columnSpan="3"
        android:lines="1"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="5"
        android:layout_columnSpan="3"
        >

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2">

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="2dp"
                android:id="@+id/tour_cell_divider_left"
                android:background="@color/login_divider"
                android:layout_gravity="fill_horizontal"
                android:layout_marginTop="10dp"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tour_cell_type"
                android:src="@drawable/ic_medical"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="2dp"/>
        </LinearLayout>

        <Button
            android:layout_width="50sp"
            android:layout_height="50sp"
            android:id="@+id/tour_cell_button_act"
            android:layout_weight="1"
            style="@style/ActButton"
            android:enabled="false"/>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2">

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="2dp"
                android:id="@+id/tour_cell_divider_right"
                android:background="@color/login_divider"
                android:layout_gravity="fill_horizontal"
                android:layout_weight="2"
                android:layout_marginTop="10dp"/>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="2dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tour_cell_people_image"
                    android:src="@drawable/ic_feet"
                    android:layout_gravity="center_horizontal"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="1"
                    android:id="@+id/tour_cell_people_count"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="3dp"
                    android:textStyle="bold"/>
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="5dp"
        android:id="@+id/tour_cell_divider"
        android:layout_columnSpan="3"
        android:background="@color/login_divider"
        android:layout_gravity="fill"
        android:layout_marginTop="2dp"/>

</social.entourage.android.map.tour.TourListItemView>