<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_light"
    android:orientation="vertical"
    tools:context="social.entourage.android.DrawerActivity">

    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/background"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="0dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="0dp"
        android:id="@+id/tour_info_title_layout">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tour_info_close"
            android:src="@drawable/ic_close"
            android:background="?android:attr/selectableItemBackground"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"/>

        <TextView
            style="@style/EntourageTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tour_info_title"
            android:id="@+id/tour_info_title"
            android:layout_gravity="center_horizontal"
            android:layout_centerHorizontal="true"/>

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tour_info_user_add_button"
            android:layout_toLeftOf="@+id/tour_info_more_button"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_user_plus"
            android:background="?android:attr/selectableItemBackground"
            android:visibility="gone"/>

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tour_info_more_button"
            android:src="@drawable/ic_more"
            android:background="?android:attr/selectableItemBackground"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"/>
    </RelativeLayout>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:rowCount="2"
        android:columnCount="2"
        android:background="@color/background"
        android:layout_alignParentLeft="false"
        android:layout_alignParentTop="false"
        android:id="@+id/tour_info_details_layout"
        android:layout_below="@+id/tour_info_title_layout"
        android:layout_marginTop="20dp"
        android:padding="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Medium Text"
            android:id="@+id/tour_info_organization"
            />

        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:id="@+id/tour_info_author_photo"
            android:layout_gravity="right"
            android:layout_rowSpan="2"
            android:src="@drawable/ic_user_photo_small"
            android:scaleType="centerInside"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@color/greyish_brown"
                android:text="Small Text"
                android:id="@+id/tour_info_type"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@color/greyish_brown"
                android:textStyle="bold"
                android:text="Small Text"
                android:id="@+id/tour_info_author_name"/>
        </LinearLayout>
    </GridLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/tour_info_discussion"
        android:id="@+id/tour_info_discussion_title"
        android:gravity="center"
        android:textColor="@color/greyish_brown"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:textSize="14sp"
        android:layout_alignParentLeft="false"
        android:layout_alignParentTop="false"
        android:layout_below="@+id/tour_info_details_layout"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/background"
        android:layout_gravity="bottom"
        android:padding="5dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="false"
        android:id="@+id/tour_info_comment_layout"
        android:layout_alignParentBottom="true">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tour_info_comment_add_button"
            android:src="@drawable/ic_plus"
            android:background="?android:attr/selectableItemBackground"
            android:layout_gravity="center_vertical"/>

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tour_info_comment"
            android:layout_weight="1"
            android:background="@drawable/bg_edit_text"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"/>

        <ImageButton
            android:id="@+id/tour_info_comment_record_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="?android:attr/selectableItemBackground"
            android:src="@drawable/ic_action_record_sound"
            android:contentDescription="@string/encounter_voice_message_button"
            android:layout_alignRight="@+id/edittext_message"
            android:layout_gravity="center_vertical"/>
    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tour_info_discussion_view"
        android:layout_below="@+id/tour_info_discussion_title"
        android:layout_above="@+id/tour_info_comment_layout"
        android:layout_alignParentLeft="true"
        android:background="@color/background"/>

    <ProgressBar
        style="?android:attr/progressBarStyleSmall"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/tour_info_progress_bar"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:indeterminate="true"
        android:indeterminateDrawable="@drawable/circular_progress_bar"
        android:visibility="visible"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom"
        android:background="@color/background_transparent"
        android:id="@+id/tour_info_options"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:visibility="gone">

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/tour_info_options_stop_tour"
            android:id="@+id/tour_info_button_stop_tour"
            style="@style/WhiteButton"/>

        <Button
            style="@style/WhiteButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/tour_info_options_quit_tour"
            android:id="@+id/tour_info_button_quit_tour"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/tour_info_options_close"
            android:id="@+id/tour_info_button_close"
            style="@style/AccentButton"
            android:alpha="1"
            android:layout_marginBottom="10dp"/>
    </LinearLayout>

</RelativeLayout>