<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context="social.entourage.android.DrawerActivity"
    android:background="@color/background_login_light">

    <ImageView
        android:id="@+id/tour_info_icon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:orientation="vertical"
        android:background="@color/background_light">

        <TextView
            android:id="@+id/tour_info_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_margin="10dp"
            android:text="@string/tour_info_date"
            android:textStyle="italic"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/tour_info_transport"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="@string/tour_info_text_transport"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/tour_info_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="@string/tour_info_text_type"
            android:textColor="@color/black"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tour_info_text_status"
                android:textColor="@color/black"/>

            <social.entourage.android.view.HtmlTextView
                android:id="@+id/tour_info_status_ongoing"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                app:htmlText="@string/tour_info_text_ongoing"/>

            <social.entourage.android.view.HtmlTextView
                android:id="@+id/tour_info_status_closed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                app:htmlText="@string/tour_info_text_closed"/>

        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/tour_info_button_close"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="@string/tour_info_button_close"
        android:background="@drawable/custom_button_yellow"/>

</LinearLayout>