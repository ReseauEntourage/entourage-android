<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="social.entourage.android.about.AboutFragment"
    android:orientation="vertical"
    android:background="@color/background">

    <social.entourage.android.view.EntourageTitleView
        android:id="@+id/about_title_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:entourageTitle="@string/about_title"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:background="@color/background_light"
        android:id="@+id/about_separator_top"
        android:layout_below="@+id/about_title_layout"/>

    <LinearLayout
        android:id="@+id/about_tutorial_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/about_separator_top"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/about_items_padding"
        android:paddingEnd="0dp"
        android:paddingLeft="@dimen/about_items_padding"
        android:paddingRight="0dp"
        android:paddingStart="@dimen/about_items_padding"
        android:paddingTop="@dimen/about_items_padding">

        <TextView
            android:id="@+id/about_tutorial"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="@string/about_tutorial"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/greyish_brown"
            android:textSize="@dimen/entourage_font_medium"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:contentDescription="@string/empty_description"
            android:scaleType="fitEnd"
            android:src="@drawable/arrow_grey"/>
    </LinearLayout>

    <View
        android:id="@+id/about_separator_tutorial"
        style="@style/SeparatorAlpha"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/about_tutorial_layout"
        android:layout_marginLeft="@dimen/about_items_padding"
        android:layout_marginStart="@dimen/about_items_padding"
        />

    <LinearLayout
        android:id="@+id/faq_website_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/about_separator_tutorial"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/about_items_padding"
        android:paddingEnd="0dp"
        android:paddingLeft="@dimen/about_items_padding"
        android:paddingRight="0dp"
        android:paddingStart="@dimen/about_items_padding"
        android:paddingTop="@dimen/about_items_padding">

        <TextView
            android:id="@+id/faq_website"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="@string/action_faq"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/greyish_brown"
            android:textSize="@dimen/entourage_font_medium"/>

        <ImageView
            android:id="@+id/imageView7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:contentDescription="@string/empty_description"
            android:scaleType="fitEnd"
            android:src="@drawable/arrow_grey"/>
    </LinearLayout>

    <View
        android:id="@+id/faq_separator_website"
        style="@style/SeparatorAlpha"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/faq_website_layout"
        android:layout_marginLeft="@dimen/about_items_padding"
        android:layout_marginStart="@dimen/about_items_padding"
        />

    <LinearLayout
        android:id="@+id/about_conditions_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/faq_separator_website"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/about_items_padding"
        android:paddingEnd="0dp"
        android:paddingLeft="@dimen/about_items_padding"
        android:paddingRight="0dp"
        android:paddingStart="@dimen/about_items_padding"
        android:paddingTop="@dimen/about_items_padding">

        <TextView
            android:id="@+id/about_conditions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="@string/about_conditions"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/greyish_brown"
            android:textSize="@dimen/entourage_font_medium"/>

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:contentDescription="@string/empty_description"
            android:scaleType="fitEnd"
            android:src="@drawable/arrow_grey"/>
    </LinearLayout>

    <View
        android:id="@+id/about_separator_conditions"
        style="@style/SeparatorAlpha"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/about_conditions_layout"
        android:layout_marginLeft="@dimen/about_items_padding"
        android:layout_marginStart="@dimen/about_items_padding"
        />

    <LinearLayout
        android:id="@+id/about_website_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/about_separator_conditions"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/about_items_padding"
        android:paddingEnd="0dp"
        android:paddingLeft="@dimen/about_items_padding"
        android:paddingRight="0dp"
        android:paddingStart="@dimen/about_items_padding"
        android:paddingTop="@dimen/about_items_padding">

        <TextView
            android:id="@+id/about_website"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="@string/about_website"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/greyish_brown"
            android:textSize="@dimen/entourage_font_medium"/>

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:contentDescription="@string/empty_description"
            android:scaleType="fitEnd"
            android:src="@drawable/arrow_grey"/>
    </LinearLayout>

    <View
        android:id="@+id/about_website_separator"
        style="@style/SeparatorAlpha"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/about_website_layout"
        android:layout_marginLeft="@dimen/about_items_padding"
        android:layout_marginStart="@dimen/about_items_padding"
        />

    <LinearLayout
        android:id="@+id/about_email_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/about_website_separator"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/about_items_padding"
        android:paddingEnd="0dp"
        android:paddingLeft="@dimen/about_items_padding"
        android:paddingRight="0dp"
        android:paddingStart="@dimen/about_items_padding"
        android:paddingTop="@dimen/about_items_padding">

        <TextView
            android:id="@+id/about_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="@string/about_email"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/greyish_brown"
            android:textSize="@dimen/entourage_font_medium"/>

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:contentDescription="@string/empty_description"
            android:scaleType="fitEnd"
            android:src="@drawable/arrow_grey"/>
    </LinearLayout>

    <View
        android:id="@+id/about_separator_email"
        style="@style/SeparatorAlpha"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/about_email_layout"
        android:layout_marginLeft="@dimen/about_items_padding"
        android:layout_marginStart="@dimen/about_items_padding"
        />

    <ImageView
        android:id="@+id/about_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="@dimen/about_items_padding"
        android:contentDescription="@string/empty_description"
        android:src="@drawable/entourage_logo_grey"/>

</RelativeLayout>
