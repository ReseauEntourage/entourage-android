<?xml version="1.0" encoding="utf-8"?>


<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
        name="title"
        type="java.lang.String" />

        <variable
            name="description"
            type="java.lang.String" />

    </data>

        <LinearLayout
            android:id="@+id/moderator_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/new_bg_rounded_white"
            android:orientation="horizontal"
            android:paddingVertical="12dp"
            android:paddingLeft="19dp"
            android:paddingRight="24dp">

            <ImageView
                android:id="@+id/image_moderator"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:background="@drawable/new_shadow"
                android:layout_gravity="center"
                android:elevation="1dp"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingHorizontal="12dp">

                <TextView
                    android:id="@+id/title"
                    style="@style/left_courant_bold_black"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:text="@{title}"
                    tools:text="Barbara, modÃ©ratrice" />

                <TextView
                    android:id="@+id/description"
                    style="@style/left_courant_black"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLines="2"
                    android:text="@{description}"
                    tools:text="Votre guide dans l'app" />
            </LinearLayout>

            <ImageView
                android:id="@+id/moderator_icon"
                android:layout_width="13dp"
                android:layout_height="13dp"
                android:layout_gravity="center"
                android:background="@drawable/new_shadow"
                android:elevation="1dp"
                app:srcCompat="@drawable/ic_forward" />

        </LinearLayout>
</layout>