<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context="social.entourage.android.map.permissions.NoLocationPermissionFragment">

    <!-- TODO: Update blank fragment layout -->

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/no_location_background"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:src="@drawable/login_startup_background"
        android:scaleType="centerCrop"
        android:layout_alignParentEnd="false"/>

    <ImageView
        android:layout_width="75dp"
        android:layout_height="wrap_content"
        android:id="@+id/no_location_logo"
        android:layout_centerHorizontal="true"
        android:src="@drawable/entourage_logo"
        android:scaleType="fitCenter"
        android:layout_marginBottom="10dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="80dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="@string/map_permission_explanation"
        android:id="@+id/no_location_explanation"
        android:textColor="@color/white"
        android:gravity="center"
        android:textSize="17sp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_below="@+id/no_location_logo"/>

</RelativeLayout>
