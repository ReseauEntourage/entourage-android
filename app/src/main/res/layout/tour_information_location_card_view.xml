<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/tic_location_date"
        android:layout_gravity="center_horizontal"
        android:textSize="14sp"
        android:textColor="@color/greyish"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="10dp"
        android:layout_marginStart="50dp"
        android:background="@drawable/bubble_discussion">

        <ImageView
            android:id="@+id/tic_location_image"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:contentDescription="@string/empty_description"
            android:padding="5dp"
            android:scaleType="centerInside"
            android:visibility="invisible"/>

        <TextView
            android:id="@+id/tic_location_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/tic_location_image"
            android:layout_toRightOf="@+id/tic_location_image"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/white"
            android:textSize="@dimen/entourage_font_large"/>

        <TextView
            android:id="@+id/tic_location_duration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tic_location_title"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/tic_location_image"
            android:layout_toRightOf="@+id/tic_location_image"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/white"
            android:textSize="@dimen/entourage_font_large"/>

        <TextView
            android:id="@+id/tic_location_distance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_below="@+id/tic_location_duration"
            android:layout_toEndOf="@+id/tic_location_image"
            android:layout_toRightOf="@+id/tic_location_image"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/white"
            android:textSize="@dimen/entourage_font_large"/>
    </RelativeLayout>
</LinearLayout>
