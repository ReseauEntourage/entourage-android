<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background_light">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/user_photo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:src="@drawable/ic_user_photo"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/user_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="MICHEL M."
                android:textSize="20dp"/>

            <TextView
                android:id="@+id/user_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="michel.robert@email.fr"
                android:textSize="20dp"/>

            <TextView
                android:id="@+id/user_tours_count"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="40 maraudes"
                android:textSize="20dp"/>

            <TextView
                android:id="@+id/user_encounters_count"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="98 personnes rencontrées"
                android:textSize="20dp"/>

            <TextView
                android:id="@+id/user_association"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="La Croix Rouge Française"
                android:textSize="20dp"/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center">

        <Button
            android:id="@+id/user_button_change_photo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/user_button_change_photo"
            android:layout_margin="10dp"
            android:background="@drawable/custom_button_yellow"/>

        <Button
            android:id="@+id/user_button_change_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/user_button_change_email"
            android:layout_margin="10dp"
            android:background="@drawable/custom_button_yellow"/>

        <Button
            android:id="@+id/user_button_change_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/user_button_change_password"
            android:layout_margin="10dp"
            android:background="@drawable/custom_button_yellow"/>

        <Button
            android:id="@+id/user_button_unsubscribe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/user_button_unsubscribe"
            android:layout_margin="10dp"
            android:background="@drawable/custom_button_yellow"/>

    </LinearLayout>



</LinearLayout>