<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="end"
    android:layout_marginTop="20dp"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/sidemenu_title"
        android:id="@+id/drawer_header_title"
        android:layout_gravity="center_horizontal"
        android:textAllCaps="true"
        android:layout_marginTop="5dp"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background_login_grey">

        <ImageView
            android:id="@+id/drawer_header_user_photo"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:paddingTop="15dp"
            android:src="@drawable/bg_user_image_button"
            android:layout_gravity="center_horizontal"/>

        <TextView
            android:id="@+id/drawer_header_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textColor="@android:color/black"
            android:layout_marginLeft="5dp"
            android:gravity="center"
            android:layout_marginRight="5dp"
            android:layout_gravity="center_horizontal"/>
    </LinearLayout>


</LinearLayout>