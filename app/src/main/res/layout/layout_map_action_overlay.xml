<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <RelativeLayout
        android:id="@+id/map_action_buttons"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_gravity="end"
        android:paddingBottom="20dp"
        android:paddingRight="20dp" >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layout_line_create_entourage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentEnd="true">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="8dp"
                android:text="@string/entourage_create_menu"
                android:textColor="@color/greyish_brown"
                android:textSize="@dimen/entourage_font_medium"
                android:textStyle="bold"
                app:layout_constraintEnd_toStartOf="@+id/button_create_entourage"
                app:layout_constraintTop_toTopOf="@+id/button_create_entourage" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="8dp"
                android:text="@string/entourage_create_submenu"
                android:textColor="@color/greyish_brown"
                android:textSize="@dimen/entourage_font_small"
                app:layout_constraintEnd_toStartOf="@+id/button_create_entourage"
                app:layout_constraintTop_toBottomOf="@id/textView2" />

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/button_create_entourage"
                style="@style/MapActionButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:srcCompat="@drawable/ic_entourage_contribution"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layout_line_create_outing"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/layout_line_create_entourage"
            android:layout_alignParentLeft="true"
            android:layout_alignParentEnd="true">

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="8dp"
                android:text="@string/outing_create_menu"
                android:textColor="@color/greyish_brown"
                android:textSize="@dimen/entourage_font_medium"
                android:textStyle="bold"
                app:layout_constraintEnd_toStartOf="@+id/button_create_outing"
                app:layout_constraintTop_toTopOf="@+id/button_create_outing" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="8dp"
                android:text="@string/outing_create_submenu"
                android:textColor="@color/greyish_brown"
                android:textSize="@dimen/entourage_font_small"
                app:layout_constraintEnd_toStartOf="@+id/button_create_outing"
                app:layout_constraintTop_toBottomOf="@id/textView5" />

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/button_create_outing"
                style="@style/MapActionButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:srcCompat="@drawable/ic_event_white_24dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layout_line_create_maraude"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/layout_line_create_outing"
            android:layout_alignParentEnd="true">

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="8dp"
                android:text="@string/tour_create"
                android:textColor="@color/greyish_brown"
                android:textSize="@dimen/entourage_font_medium"
                android:textStyle="bold"
                app:layout_constraintEnd_toStartOf="@+id/button_start_tour_launcher"
                app:layout_constraintTop_toTopOf="@+id/button_start_tour_launcher" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="8dp"
                android:text="Pour votre association"
                android:textColor="@color/greyish_brown"
                android:textSize="@dimen/entourage_font_small"
                app:layout_constraintEnd_toStartOf="@+id/button_start_tour_launcher"
                app:layout_constraintTop_toBottomOf="@id/textView6" />

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/button_start_tour_launcher"
                style="@style/MapActionButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:srcCompat="@drawable/ic_button_create_maraude"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layout_line_add_encounter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/layout_line_create_maraude"
            android:layout_alignParentEnd="true">

            <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="8dp"
                android:text="@string/tour_create_encounter_button"
                android:textColor="@color/greyish_brown"
                android:textSize="@dimen/entourage_font_medium"
                android:textStyle="bold"
                app:layout_constraintEnd_toStartOf="@+id/button_add_tour_encounter"
                app:layout_constraintTop_toTopOf="@+id/button_add_tour_encounter" />

            <TextView
                android:id="@+id/textView9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="8dp"
                android:text="lors de votre maraude"
                android:textColor="@color/greyish_brown"
                android:textSize="@dimen/entourage_font_small"
                app:layout_constraintEnd_toStartOf="@+id/button_add_tour_encounter"
                app:layout_constraintTop_toBottomOf="@id/textView8" />

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/button_add_tour_encounter"
                style="@style/MapActionButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:srcCompat="@drawable/ic_encounter"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </RelativeLayout>
</RelativeLayout>