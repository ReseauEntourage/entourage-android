<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="170dp"
    android:layout_margin="10dp"
    android:background="@drawable/background_organizer"
    android:padding="16dp">

    <TextView
        android:id="@+id/tv_home_small_talk_title_conversation"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/small_talk_title_conversation"
        android:fontFamily="@font/quicksand_bold"
        android:textSize="16sp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:textColor="@color/black"
        app:layout_constraintStart_toEndOf="@+id/iv_home_small_talk_avatar_3"
        app:layout_constraintTop_toTopOf="@+id/iv_home_small_talk_avatar_1"

        app:layout_constraintEnd_toEndOf="parent" />

    <ImageView
        android:id="@+id/iv_home_small_talk_avatar_1"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="4dp"
        android:src="@drawable/placeholder_user"
        app:layout_constraintTop_toTopOf="parent"

        app:layout_constraintStart_toStartOf="parent"
        android:scaleType="centerCrop"
        android:background="@drawable/bg_beige_round" />

    <ImageView
        android:id="@+id/iv_home_small_talk_avatar_2"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginEnd="4dp"
        android:src="@drawable/placeholder_user"
        app:layout_constraintTop_toTopOf="@id/iv_home_small_talk_avatar_1"
        app:layout_constraintStart_toEndOf="@id/iv_home_small_talk_avatar_1"
        android:scaleType="centerCrop"
        android:background="@drawable/bg_beige_round" />

    <ImageView
        android:id="@+id/iv_home_small_talk_avatar_3"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginEnd="8dp"
        android:src="@drawable/placeholder_user"
        app:layout_constraintTop_toTopOf="@id/iv_home_small_talk_avatar_1"
        app:layout_constraintStart_toEndOf="@id/iv_home_small_talk_avatar_2"
        android:scaleType="centerCrop"
        android:background="@drawable/bg_beige_round" />

    <TextView
        android:id="@+id/tv_home_small_talk_names"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Alex, Gwen, et Julie"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/nunitosans_regular"
        android:textSize="14sp"
        android:textColor="@color/grey_dark"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_home_small_talk_avatar_1"
        app:layout_constraintEnd_toEndOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>
