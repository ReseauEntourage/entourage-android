<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:id="@+id/layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:weightSum="100">


        <ImageView
            android:id="@+id/picture"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/new_contact" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="95"
            android:orientation="vertical">

            <TextView
                android:id="@+id/name"
                style="@style/left_courant_bold_black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="25dp"
                android:maxLines="2"
                tools:text="Name" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/ambassador"
                    style="@style/group_member_subtitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginBottom="25dp"
                    android:text="Ambassadeur"
                    tools:text="Ambassadeur" />

                <TextView
                    android:id="@+id/partner"
                    style="@style/group_member_subtitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginBottom="25dp"
                    android:text="Entourage"
                    tools:text="Entourage" />

            </LinearLayout>

        </LinearLayout>


        <ImageView
            android:id="@+id/contact"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/new_contact"
            app:layout_constraintBottom_toTopOf="@id/divider"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:src="@drawable/new_contact" />
    </LinearLayout>
</layout>