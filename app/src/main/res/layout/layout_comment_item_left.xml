<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="4dp"
    android:paddingBottom="4dp"
    android:gravity="center_vertical">

    <!-- Avatar -->
    <ImageView
        android:id="@+id/image"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toTopOf="@id/message_container"
        app:layout_constraintStart_toStartOf="parent"
        tools:src="@drawable/new_illu_header_group" />

    <!-- Conteneur bulle : image + texte -->
    <LinearLayout
        android:id="@+id/message_container"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="0dp"
        android:orientation="vertical"
        android:background="@drawable/new_comment_background_beige"
        android:paddingBottom="0dp"
        app:layout_constraintStart_toEndOf="@id/image"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@id/report"
        app:layout_constraintWidth_percent="0.85"
        tools:ignore="RtlHardcoded">

        <androidx.cardview.widget.CardView
            android:id="@+id/comment_image_container"
            android:layout_width="match_parent"
            android:layout_height="175dp"
            android:layout_marginBottom="0dp"
            android:visibility="visible"
            app:cardCornerRadius="12dp"
            app:cardElevation="0dp">

            <ImageView
                android:id="@+id/comment_image"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                android:contentDescription="@null"
                tools:src="@drawable/place_holder_large" />
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/comment"
            style="@style/left_courant_black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="15dp"
            android:paddingVertical="10dp"
            android:autoLink="web"
            android:linksClickable="true"
            tools:text="Bonjour je m'appelle Alex. Voici une photo d’un moment convivial partagé avec l’équipe." />
    </LinearLayout>

    <!-- Bouton signalement -->
    <ImageView
        android:id="@+id/report"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="8dp"
        android:src="@drawable/new_report_comment"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/message_container" />

    <!-- Info auteur/date -->
    <LinearLayout
        android:id="@+id/information_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="7dp"
        android:layout_marginTop="3dp"
        android:orientation="horizontal"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="@id/message_container"
        app:layout_constraintTop_toBottomOf="@id/message_container"
        tools:visibility="visible">

        <TextView
            android:id="@+id/author_name"
            style="@style/group_member_subtitle_black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="4dp"
            tools:text="John Doe" />

        <TextView
            android:id="@+id/publication_date"
            style="@style/group_member_subtitle_black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="le 15.01.21" />
    </LinearLayout>

    <!-- Bloc erreur -->
    <LinearLayout
        android:id="@+id/error"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="7dp"
        android:layout_marginTop="3dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="@id/message_container"
        app:layout_constraintTop_toBottomOf="@id/message_container"
        tools:visibility="gone">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="4dp"
            android:src="@drawable/new_retry" />

        <TextView
            style="@style/error_msg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/retry_comment" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
