<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:paddingTop="8dp"
    android:paddingEnd="2dp"
    android:id="@+id/layout">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="160dp"
        android:layout_height="130dp"
        android:id="@+id/layout_card"
        android:background="@drawable/home_v2_item_group_shape"
        android:layout_marginTop="@dimen/entourage_little_margin_top"
        android:layout_marginStart="@dimen/entourage_little_margin_five"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:id="@+id/iv_group_item"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:src="@drawable/placeholder_my_event"
            android:scaleType="centerCrop" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/tv_group_item"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/iv_group_item"
            app:layout_constraintBottom_toBottomOf="parent"
            android:fontFamily="@font/quicksand_bold"
            android:textSize="@dimen/entourage_font_small"
            tools:text="Un Titre de groupe cool"
            android:ellipsize="end"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:lines="2"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.cardview.widget.CardView
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:id="@+id/card_news_group"
        app:cardCornerRadius="12dp"
        app:cardBackgroundColor="@color/tomato"
        app:layout_constraintTop_toTopOf="@+id/layout_card"
        app:layout_constraintEnd_toEndOf="@+id/layout_card"
        android:layout_marginTop="-10dp"
        android:layout_marginEnd="-6dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_news_group"
            android:text="1"
            android:textSize="12sp"
            android:textColor="@color/white"
            android:fontFamily="@font/quicksand_bold"
            android:layout_gravity="center"
            android:gravity="center"
            android:padding="2dp"
            />
    </androidx.cardview.widget.CardView>




</androidx.constraintlayout.widget.ConstraintLayout>