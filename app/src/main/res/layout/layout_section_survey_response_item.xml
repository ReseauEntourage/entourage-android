<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="20dp">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_title_question_option"
        android:fontFamily="@font/nunitosans_bold"
        android:textSize="15sp"
        android:textColor="@color/black"
        tools:text="Choix 1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:id="@+id/iv_check"
        app:layout_constraintTop_toBottomOf="@+id/tv_title_question_option"
        app:layout_constraintStart_toStartOf="parent"
        android:src="@drawable/ic_checked_orange_light"
        android:layout_marginTop="5dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/number_vote"
        android:fontFamily="@font/nunitosans_regular"
        android:textSize="13sp"
        android:textColor="@color/grey_vote"
        tools:text="0 vote"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_title_question_option"
        app:layout_constraintStart_toEndOf="@+id/iv_check"
        android:layout_marginStart="5dp"/>



</androidx.constraintlayout.widget.ConstraintLayout>