<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@drawable/bg_rounded_white_plain_eight"
              android:orientation="vertical"
              android:paddingStart="20dp"
              android:paddingEnd="20dp"
              tools:context=".entourage.EntourageCloseFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_rounded_white_plain_eight"
        tools:context=".entourage.EntourageCloseFragment">

        <ImageButton
            android:id="@+id/entourage_close_close_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="20dp"
            android:background="?attr/selectableItemBackground"
            android:contentDescription="@string/empty_description"
            android:layout_alignParentEnd="true"
            app:srcCompat="@drawable/ic_close_black_24dp"
            app:tint="@color/accent"
            tools:ignore="TouchTargetSizeCheck" />

        <TextView
            android:id="@+id/textView49"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="64dp"
            android:fontFamily="sans-serif-medium"
            android:text="@string/entourage_close_title0"
            android:textColor="@color/accent"
            android:textSize="@dimen/entourage_font_xtra_large" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <FrameLayout
        android:id="@+id/frameLayout8"
        android:layout_width="60dp"
        android:layout_height="2dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="20dp"
        android:background="@color/accent"/>
    </RelativeLayout>

    <TextView
        android:id="@+id/textView50"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:text="@string/entourage_close_description"
        android:textColor="@color/action_type_outing"
        android:textSize="@dimen/entourage_font_medium" />


    <TextView
        android:id="@+id/textView51"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:fontFamily="sans-serif-medium"
        android:text="@string/entourage_close_subtitle"
        android:textColor="@color/accent"
        android:textSize="@dimen/entourage_font_large" />


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/bg_button_rounded_orange_stroke_1px">

        <TextView
            android:id="@+id/entourage_close_success_button"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_marginStart="16dp"
            android:elevation="0dp"
            android:fontFamily="sans-serif-medium"
            android:gravity="start|center_vertical"
            android:text="@string/entourage_close_success_button"
            android:textColor="@color/action_type_outing"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/imageView32"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/imageView32"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:elevation="10dp"
            app:srcCompat="@drawable/ic_smile_orange"
            app:layout_constraintBottom_toBottomOf="@+id/entourage_close_success_button"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/entourage_close_success_button" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_button_rounded_orange_stroke_1px">

        <TextView
            android:id="@+id/entourage_close_failed_button"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_marginStart="16dp"
            android:fontFamily="sans-serif-medium"
            android:gravity="start|center_vertical"
            android:text="@string/entourage_close_failed_button"
            android:textColor="@color/action_type_outing"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/imageView33"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/imageView33"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginStart="16dp"
            android:elevation="10dp"
            app:srcCompat="@drawable/ic_action_cancel_24"
            app:layout_constraintBottom_toBottomOf="@+id/entourage_close_failed_button"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/entourage_close_failed_button" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <Button
        android:id="@+id/entourage_close_cancel_button"
        style="@style/WhiteButtonTransparent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="10dp"
        android:text="@string/quitter"
        android:textColor="@color/accent"
        android:textSize="16sp" />

</LinearLayout>
