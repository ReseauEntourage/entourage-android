<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".old_v7.entourage.EntourageCloseFragment">

    <LinearLayout
        android:id="@+id/ui_layout_pop_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_rounded_white_plain_eight"
        android:orientation="vertical"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_rounded_white_plain_eight"
            tools:context=".old_v7.entourage.EntourageCloseFragment">

            <ImageButton
                android:id="@+id/entourage_close_close_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="20dp"
                android:background="?attr/selectableItemBackground"
                android:contentDescription="@string/empty_description"
                app:srcCompat="@drawable/ic_close_black_24dp"
                app:tint="@color/accent"
                tools:ignore="TouchTargetSizeCheck" />

            <TextView
                android:id="@+id/textView49"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="64dp"
                android:fontFamily="sans-serif-medium"
                android:text="@string/entourage_close_title_new"
                android:textColor="@color/accent"
                android:textSize="@dimen/entourage_font_xtra_large" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <FrameLayout
                android:id="@+id/frameLayout8"
                android:layout_width="60dp"
                android:layout_height="2dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="20dp"
                android:background="@color/accent" />
        </RelativeLayout>

        <TextView
            android:id="@+id/textView50"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:text="@string/entourage_close_description_new"
            android:textColor="@color/action_type_outing"
            android:textSize="@dimen/entourage_font_medium" />

        <TextView
            android:id="@+id/textView51"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:fontFamily="sans-serif-medium"
            android:text="@string/entourage_close_subtitle_new"
            android:textColor="@color/accent"
            android:textSize="@dimen/entourage_font_large" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/ui_bt_action_success"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/bg_button_rounded_orange_stroke_1px">

            <TextView
                android:id="@+id/ui_tv_action_success"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_marginStart="16dp"
                android:elevation="0dp"
                android:fontFamily="sans-serif-medium"
                android:gravity="start|center_vertical"
                android:text="@string/entourage_close_success_button"
                android:textColor="@color/action_type_outing"
                android:textSize="16sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/imageView32"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/imageView32"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:elevation="10dp"
                app:layout_constraintBottom_toBottomOf="@+id/ui_tv_action_success"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/ui_tv_action_success"
                app:srcCompat="@drawable/ic_picto_success" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/ui_bt_action_fail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_button_rounded_orange_stroke_1px">

            <TextView
                android:id="@+id/ui_tv_action_fail"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_marginStart="16dp"
                android:fontFamily="sans-serif-medium"
                android:gravity="start|center_vertical"
                android:text="@string/entourage_close_failed_button"
                android:textColor="@color/action_type_outing"
                android:textSize="16sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/imageView33"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/imageView33"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_marginStart="16dp"
                android:elevation="10dp"
                app:layout_constraintBottom_toBottomOf="@+id/ui_tv_action_fail"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/ui_tv_action_fail"
                app:srcCompat="@drawable/ic_picto_fail" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <Button
            android:id="@+id/ui_bt_action_validate"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/bg_button_accent_rounded"
            android:fontFamily="sans-serif-medium"
            android:text="@string/entourage_info_options_stop"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:textSize="16sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ui_layout_pop_ask_comment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_rounded_white_plain_eight"
        android:orientation="vertical"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/ui_layout_pop_main">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_rounded_white_plain_eight"
            tools:context=".old_v7.entourage.EntourageCloseFragment">

            <TextView
                android:id="@+id/textView491"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp"
                android:fontFamily="sans-serif-medium"
                android:text="@string/entourage_close_title_ask_comment"
                android:textColor="@color/accent"
                android:textSize="@dimen/entourage_font_xtra_large" />

            <ImageButton
                android:id="@+id/entourage_close_close_button2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="20dp"
                android:background="?attr/selectableItemBackground"
                android:contentDescription="@string/empty_description"
                android:visibility="invisible"
                app:srcCompat="@drawable/ic_close_black_24dp"
                app:tint="@color/accent"
                tools:ignore="TouchTargetSizeCheck" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <FrameLayout
                android:id="@+id/frameLayout9"
                android:layout_width="60dp"
                android:layout_height="2dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="20dp"
                android:background="@color/accent" />
        </RelativeLayout>

        <TextView
            android:id="@+id/textView52"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:text="@string/entourage_close_subtitle_ask_comment"
            android:textColor="@color/action_type_outing"
            android:textSize="@dimen/entourage_font_medium" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/ui_bt_action_ask_comment_yes"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="16dp"

            android:layout_marginBottom="10dp"
            android:background="@drawable/bg_button_rounded_orange_stroke_1px">

            <TextView
                android:id="@+id/ui_tv_action_ask_comment_yes"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_marginStart="16dp"
                android:elevation="0dp"
                android:fontFamily="sans-serif-medium"
                android:gravity="start|center_vertical"
                android:text="@string/yes"
                android:textColor="@color/action_type_outing"
                android:textSize="16sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/imageView34"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/imageView34"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:elevation="10dp"
                app:layout_constraintBottom_toBottomOf="@+id/ui_tv_action_ask_comment_yes"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/ui_tv_action_ask_comment_yes"
                app:srcCompat="@drawable/ic_picto_success" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/ui_bt_action_ask_comment_no"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:background="@drawable/bg_button_rounded_orange_stroke_1px">

            <TextView
                android:id="@+id/ui_tv_action_ask_comment_no"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_marginStart="16dp"
                android:fontFamily="sans-serif-medium"
                android:gravity="start|center_vertical"
                android:text="@string/no"
                android:textColor="@color/action_type_outing"
                android:textSize="16sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/imageView35"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/imageView35"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_marginStart="16dp"
                android:elevation="10dp"
                app:layout_constraintBottom_toBottomOf="@+id/ui_tv_action_ask_comment_no"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/ui_tv_action_ask_comment_no"
                app:srcCompat="@drawable/ic_picto_fail" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="2000dp"
        android:layout_height="2000dp"
        android:id="@+id/ui_layout_full_screen_fake"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@color/transparent">

    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:id="@+id/ui_layout_pop_add_comment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_rounded_white_plain_eight"
        android:orientation="vertical"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_rounded_white_plain_eight"
            tools:context=".old_v7.entourage.EntourageCloseFragment">

            <ImageButton
                android:id="@+id/entourage_close_add_comment_button_close"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="20dp"
                android:background="?attr/selectableItemBackground"
                android:contentDescription="@string/empty_description"
                app:srcCompat="@drawable/ic_close_black_24dp"
                app:tint="@color/accent"
                tools:ignore="TouchTargetSizeCheck" />

            <TextView
                android:id="@+id/textView55"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="64dp"
                android:fontFamily="sans-serif-medium"
                android:text="@string/entourage_close_add_comment_send_title"
                android:textColor="@color/accent"
                android:textSize="@dimen/entourage_font_xtra_large" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <FrameLayout
                android:layout_width="60dp"
                android:layout_height="2dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="20dp"
                android:background="@color/accent" />
        </RelativeLayout>

        <EditText
            android:id="@+id/ui_et_add_comment"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="@drawable/bg_rounded_login_grey_light_stroke"
            android:ems="10"
            android:gravity="start|top"
            android:hint="@string/entourage_close_add_comment_send_placeholder"
            android:inputType="textMultiLine" />

        <Button
            android:id="@+id/ui_bt_action_add_comment_validate"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="1000dp"
            android:background="@drawable/bg_button_accent_rounded"
            android:fontFamily="sans-serif-medium"
            android:text="@string/entourage_close_add_comment_send_button"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:textSize="16sp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>