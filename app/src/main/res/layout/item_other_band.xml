<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="8dp"
    android:layout_marginHorizontal="16dp"
    android:elevation="2dp"
    android:radius="12dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/background_organizer"
        android:padding="16dp">

        <!-- 📸 Avatars empilés 2x2 + 1 -->
        <ImageView
            android:id="@+id/avatar1"
            android:layout_width="33dp"
            android:layout_height="33dp"
            android:background="@drawable/circle_white_background"
            android:scaleType="centerCrop"
            android:src="@drawable/placeholder_user"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <ImageView
            android:id="@+id/avatar2"
            android:layout_width="33dp"
            android:layout_height="33dp"
            android:layout_marginStart="-10dp"
            android:layout_marginTop="4dp"
            android:background="@drawable/circle_white_background"
            android:scaleType="centerCrop"
            android:src="@drawable/placeholder_user"
            app:layout_constraintTop_toTopOf="@id/avatar1"
            app:layout_constraintStart_toEndOf="@id/avatar1" />

        <ImageView
            android:id="@+id/avatar3"
            android:layout_width="33dp"
            android:layout_height="33dp"
            android:layout_marginTop="-10dp"
            android:background="@drawable/circle_white_background"
            android:scaleType="centerCrop"
            android:src="@drawable/placeholder_user"
            app:layout_constraintTop_toBottomOf="@id/avatar1"
            app:layout_constraintStart_toStartOf="@id/avatar1" />

        <ImageView
            android:id="@+id/avatar4"
            android:layout_width="33dp"
            android:layout_height="33dp"
            android:layout_marginStart="-10dp"
            android:layout_marginTop="-10dp"
            android:background="@drawable/circle_white_background"
            android:scaleType="centerCrop"
            android:src="@drawable/placeholder_user"
            app:layout_constraintTop_toBottomOf="@id/avatar2"
            app:layout_constraintStart_toEndOf="@id/avatar3" />

        <ImageView
            android:id="@+id/avatar5"
            android:layout_width="33dp"
            android:layout_height="33dp"
            android:layout_marginTop="-10dp"
            android:layout_marginStart="-5dp"
            android:background="@drawable/circle_white_background"
            android:scaleType="centerCrop"
            android:src="@drawable/placeholder_user"
            app:layout_constraintTop_toBottomOf="@id/avatar3"
            app:layout_constraintStart_toStartOf="@id/avatar2"
            app:layout_constraintEnd_toEndOf="@id/avatar4"
            app:layout_constraintHorizontal_bias="0.5" />

        <!-- 📝 Description -->
        <TextView
            android:id="@+id/textDescription"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            android:textSize="15sp"
            app:layout_constraintTop_toTopOf="@id/avatar1"
            app:layout_constraintStart_toEndOf="@id/avatar2"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="16dp" />

        <!-- 👥 Membres -->
        <TextView
            android:id="@+id/textMembers"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="#666666"
            app:layout_constraintTop_toBottomOf="@id/textDescription"
            app:layout_constraintStart_toStartOf="@id/textDescription"
            app:layout_constraintEnd_toEndOf="@id/textDescription"
            android:layout_marginTop="4dp" />

        <!-- 🔘 Bouton rejoindre -->
        <Button
            android:id="@+id/buttonJoin"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="0dp"
            android:layout_height="47dp"
            android:background="@drawable/shape_button_v9_negative"
            android:fontFamily="@font/quicksand_bold"
            android:text="@string/small_talk_other_band_join"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@id/avatar5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>
