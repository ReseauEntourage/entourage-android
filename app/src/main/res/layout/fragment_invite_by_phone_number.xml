<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context=".entourage.invite.phonenumber.InviteByPhoneNumberFragment"
                android:orientation="vertical"
                android:background="@color/background_light">

    <social.entourage.android.view.EntourageTitleView
        android:id="@+id/invite_phone_navigation_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:entourageTitle="@string/invite_phone_title"
        app:entourageTitleAction="@string/send"/>

    <RelativeLayout
        android:id="@+id/invite_phone_description_layout"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_below="@+id/invite_phone_navigation_layout"
        android:background="@color/background_light"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="10dp"
            android:text="@string/invite_phone_description"
            android:textAppearance="?android:attr/textAppearanceMedium"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/invite_phone_description_layout"
        android:background="@color/white"
        android:orientation="vertical"
        android:paddingBottom="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="20dp">

        <EditText
            android:id="@+id/invite_phone_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="@string/invite_phone_number_hint"
            android:inputType="phone"
            android:textColor="@color/greyish_brown"
            android:textColorHint="@color/greyish"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>
