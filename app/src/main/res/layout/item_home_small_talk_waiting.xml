<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout_item"
    android:layout_width="match_parent"
    android:layout_height="170dp"
    android:layout_margin="10dp"
    android:background="@drawable/background_organizer"
    android:padding="16dp">

    <ImageView
        android:id="@+id/iv_home_small_talk_icon_waiting"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_home_wait_small_talk"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

    <TextView
        android:id="@+id/tv_home_small_talk_title_waiting"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/small_talk_title_waiting"
        android:fontFamily="@font/quicksand_bold"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:layout_marginStart="12dp"
        app:layout_constraintStart_toEndOf="@id/iv_home_small_talk_icon_waiting"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/tv_home_small_talk_subtitle_waiting"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/small_talk_subtitle_waiting"
        android:fontFamily="@font/nunitosans_regular"
        android:textSize="14sp"
        android:textColor="@color/grey_dark"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toBottomOf="@id/tv_home_small_talk_title_waiting"
        app:layout_constraintStart_toStartOf="@id/tv_home_small_talk_title_waiting"
        app:layout_constraintEnd_toEndOf="@id/tv_home_small_talk_title_waiting" />
</androidx.constraintlayout.widget.ConstraintLayout>
