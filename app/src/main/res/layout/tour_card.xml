<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:padding="2dp"
    android:background="@color/background_login_light"
    android:clickable="true"
    android:focusable="true"
    android:focusableInTouchMode="true">

    <!-- android:background="@drawable/custom_recyclerview_item" -->

    <android.support.v7.widget.CardView
        android:id="@+id/choice_card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/choice_card_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/choice_card_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:padding="3dp"/>

            <TextView
                android:id="@+id/choice_card_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:text="@string/tour_text_separator"/>

            <TextView
                android:id="@+id/choice_card_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:textStyle="italic"/>

        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>