<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="social.entourage.android.authentication.login.LoginActivity"
    android:background="@color/background_login_grey"
    android:weightSum="8">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center_horizontal"
        android:layout_weight="3"
        android:id="@+id/login_block_lost_code_title">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/login_title_lost_code"
            android:id="@+id/login_text_lost_code_title"
            android:layout_centerInParent="true"
            android:textSize="25sp"
            android:elegantTextHeight="false"
            android:gravity="center"/>
    </RelativeLayout>

    <TableLayout
        android:id="@+id/login_block_code_form"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:background="@color/background_login_light"
        android:divider="@color/login_divider"
        android:showDividers="middle|end">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="@string/login_text_country_code"
                android:id="@+id/textView"
                android:layout_marginLeft="10dp"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="phone"
                android:id="@+id/editText"
                style="@style/CustomEditTextTheme"
                android:text="@string/login_text_default_country_code"
                android:editable="false"
                android:contextClickable="false"
                android:enabled="false"/>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="@string/login_text_phone"
                android:id="@+id/textView2"
                android:layout_marginLeft="10dp"
                android:textStyle="bold"/>

            <EditText
                android:id="@+id/login_edit_phone_lost_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="phone"
                android:hint="@string/login_hint_phone"
                android:textColorHint="@color/login_edittext_hint"
                android:gravity="center"
                style="@style/CustomEditTextTheme"
                android:maxLength="12"/>

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/login_divider">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:id="@+id/imageView2"
                android:background="@color/login_divider"
                android:layout_span="2"/>
        </TableRow>

    </TableLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        android:id="@+id/login_block_lost_code_button">

        <Button
            android:id="@+id/login_button_ask_code"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="@string/login_button_ask_code"
            android:textSize="20sp"
            android:background="@drawable/login_button"
            android:textAllCaps="true"
            android:textColor="@color/white"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/login_block_lost_code_confirmation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:visibility="gone"
        android:layout_weight="3">

        <social.entourage.android.view.FontTextView
            android:id="@+id/login_text_confirmation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:textColor="@color/black"
            android:gravity="center"
            app:fontName="fonts/Blokletters-Balpen.ttf"/>

        <Button
            android:id="@+id/login_button_home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="@string/login_button_home"
            android:textSize="13sp"
            android:background="@drawable/login_button"
            android:textAllCaps="true"/>

    </LinearLayout>


</LinearLayout>