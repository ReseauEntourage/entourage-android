<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="20dp"
    android:layout_margin="5dp">

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/id_card_imageview"
        app:cardCornerRadius="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/tvInterestTitle"
        app:layout_constraintStart_toStartOf="parent">
        <ImageView
            android:id="@+id/ivInterestIcon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@color/beige"
            app:layout_constraintDimensionRatio="1:1"
           android:padding="5dp"
            android:src="@drawable/ic_onboarding_interest_name_animaux" />

    </androidx.cardview.widget.CardView>


    <TextView
        android:id="@+id/tvInterestTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/id_card_imageview"
        app:layout_constraintStart_toStartOf="parent"
        android:fontFamily="@font/quicksand_bold"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:text="title" />

    <ImageView
        android:id="@+id/ivInterestCheck"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"

        app:layout_constraintTop_toTopOf="@id/id_card_imageview"
        app:layout_constraintEnd_toEndOf="parent"
        android:src="@drawable/ic_onboarding_uncheck"
       />

</androidx.constraintlayout.widget.ConstraintLayout>
