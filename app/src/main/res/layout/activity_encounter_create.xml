<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/activity_vertical_margin">

        <EditText
            android:id="@+id/edittext_street_person_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:hint="@string/encounter_hint_person_name"
            android:textIsSelectable="false"
            android:textCursorDrawable="@drawable/custom_cursor_yellow"
            android:background="@drawable/custom_edit_text"/>

        <EditText
            android:id="@+id/edittext_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:lines="10"
            android:gravity="left|top"
            android:inputType="textMultiLine"
            android:layout_below="@id/edittext_street_person_name"
            android:textCursorDrawable="@drawable/custom_cursor_yellow"
            android:background="@drawable/custom_edit_text"
            android:hint="@string/encounter_hint_notes"/>

        <ImageButton
            android:id="@+id/button_record"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/edittext_message"
            android:background="@drawable/custom_popup"
            android:src="@drawable/ic_action_record_sound"/>

        <Button
            android:id="@+id/button_create_encounter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="@string/encouter_add"
            android:minWidth="50dp"
            android:layout_below="@id/button_record"
            android:background="@drawable/custom_button_yellow"
            android:layout_centerHorizontal="true" />

    </RelativeLayout>

</LinearLayout>
