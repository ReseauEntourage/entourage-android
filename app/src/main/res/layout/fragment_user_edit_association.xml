<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context="social.entourage.android.user.edit.association.UserEditAssociationFragment"
                android:background="@color/pale_grey">
    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/background"
        android:id="@+id/user_edit_asso_title_layout"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/user_edit_asso_close_button"
            android:src="@drawable/ic_close"
            android:background="?android:attr/selectableItemBackground"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:padding="5dp"/>

        <TextView
            style="@style/EntourageTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/user_edit_asso_title"
            android:id="@+id/user_edit_asso_title"
            android:layout_gravity="center_horizontal"
            android:layout_centerHorizontal="true"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/user_save_button"
            android:id="@+id/user_edit_asso_save_button"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:textColor="@color/accent"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            />
    </RelativeLayout>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:id="@+id/user_edit_asso_search"
        android:layout_margin="10dp"
        style="@style/RoundedEditText"
        android:drawableLeft="@android:drawable/ic_menu_search"
        android:hint="@string/user_edit_asso_search_hint"
        android:imeOptions="actionSearch"
        android:gravity="center"
        android:layout_below="@+id/user_edit_asso_title_layout"/>

    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/user_edit_asso_search"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:divider="@color/separator"
        android:background="@color/white"
        android:id="@+id/user_edit_asso_listview"
        android:dividerHeight="1dp"
        android:choiceMode="singleChoice"
        android:layout_above="@+id/user_asso_public"/>

    <TextView
        android:text="@string/user_edit_no_association"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/user_asso_public"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingEnd="20dp"
        android:paddingStart="20dp"
        android:gravity="center"
        android:autoLink="email"
        android:textColor="@color/greyish_brown"
        android:textSize="17sp"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>
