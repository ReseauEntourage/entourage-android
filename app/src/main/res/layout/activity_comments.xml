<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_comments">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!--
             1) Layout principal
             Anciennement: android:layout_height="match_parent"
             On le met en 0dp + contrainte bottom_toTopOf="@+id/post_comment"
             pour laisser la place au "post_comment" en bas
             et permettre le resize quand le clavier sort.
        -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="20dp"
            android:animateLayoutChanges="true"
            android:background="@color/light_beige"
            android:orientation="vertical"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/post_comment"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <include
                android:id="@+id/header"
                layout="@layout/layout_header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <ProgressBar
                android:id="@+id/progressBar"
                style="?android:attr/progressBarStyleLarge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                android:visibility="gone"/>


            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/layout_info_new_discussion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/beige"
                android:visibility="gone"
                tools:visibility="visible">

                <ImageView
                    android:id="@+id/ui_iv_close_new"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="16dp"
                    android:padding="4dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/ic_close_black_24dp"
                    app:tint="@color/orange" />

                <TextView
                    android:id="@+id/ui_title_new"
                    style="@style/left_courant_bold_orange"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:text="@string/discussion_pop_new_message_title"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/ui_subtitle_new"
                    style="@style/left_courant_black"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="28dp"
                    android:layout_marginTop="12dp"
                    android:layout_marginEnd="28dp"
                    android:layout_marginBottom="24dp"
                    android:text="@string/discussion_pop_new_message_subtitle"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/ui_title_new" />

            </androidx.constraintlayout.widget.ConstraintLayout>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/layout_event_conv"
                android:layout_marginTop="10dp"
                android:visibility="gone"
                tools:visibility="visible">
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:background="@drawable/bg_blue_round"
                    android:id="@+id/btn_see_event"
                    android:textAlignment="viewStart"
                    android:text="@string/title_button_see_event"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:fontFamily="@font/quicksand_bold"
                    android:layout_marginHorizontal="20dp"
                    android:paddingHorizontal="50dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"/>
                
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:id="@+id/iv_btn_event"
                    android:src="@drawable/new_calendar"
                    app:layout_constraintStart_toStartOf="@+id/btn_see_event"
                    app:layout_constraintTop_toTopOf="@+id/btn_see_event"
                    app:layout_constraintBottom_toBottomOf="@+id/btn_see_event"
                    android:layout_marginStart="10dp"
                    android:elevation="10dp"
                    app:tint="@color/white" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/comments"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clipToPadding="false"
                android:paddingHorizontal="28dp"
                android:paddingTop="21dp"
                android:paddingBottom="70dp" />

        </LinearLayout>

        <!-- 2) Vue "empty_state" (message vide) -->
        <LinearLayout
            android:id="@+id/empty_state"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginBottom="80dp"
            android:background="@color/white"
            android:gravity="center"
            android:orientation="vertical"

            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="bottom">

                <ImageView
                    android:id="@+id/emptyStateLeft"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="13dp"
                    android:src="@drawable/new_empty_state_comments_left" />

                <ImageView
                    android:id="@+id/emptyStateRight"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="23dp"
                    android:src="@drawable/new_empty_state_comments_right" />
            </LinearLayout>

            <TextView
                style="@style/left_courant_bold_black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="26dp"
                android:text="@string/empty_state_comments" />

        </LinearLayout>

        <!-- 3) Barre "je dois être membre pour commenter" -->
        <TextView
            android:id="@+id/should_be_member"
            style="@style/left_legend"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/light_beige"
            android:paddingHorizontal="35dp"
            android:paddingVertical="15dp"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent" />

        <!-- 4) Bloc pour poster un commentaire, collé en bas -->
        <LinearLayout
            android:id="@+id/post_comment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingHorizontal="28dp"
            android:paddingBottom="20dp"
            android:weightSum="1"
            app:layout_constraintBottom_toBottomOf="parent">

            <EditText
                android:id="@+id/comment_message"
                style="@style/left_courant_orange"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/new_bg_rounded_button_orange_beige_stroke_slim"
                android:hint="@string/discussbis"
                android:padding="13dp"
                android:inputType="textCapSentences|textMultiLine"
                android:textColorHint="@color/orange"
                android:textColor="@color/black" />

            <ImageButton
                android:id="@+id/comment"
                android:layout_width="46dp"
                android:layout_height="46dp"
                android:layout_marginStart="7dp"
                android:background="@drawable/new_bg_rounded_inactive_button_light_orange"
                android:gravity="end"
                android:paddingVertical="10dp"
                android:src="@drawable/new_contact_white" />

        </LinearLayout>

        <!-- 5) Bloc "post_blocked" si commentaire bloqué -->
        <LinearLayout
            android:id="@+id/post_blocked"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingHorizontal="28dp"
            android:paddingBottom="20dp"
            android:visibility="gone"
            android:weightSum="1"
            app:layout_constraintBottom_toBottomOf="parent">

            <EditText
                android:id="@+id/comment_blocked"
                style="@style/left_courant_orange"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/new_bg_rounded_button_grey_beige_stroke_slim"
                android:enabled="false"
                android:hint="@string/discussbis"
                android:inputType="textCapSentences|textMultiLine"
                android:padding="13dp"
                android:textColorHint="@color/grey" />

        </LinearLayout>

        <!-- 6) Container pour les suggestions (mentions), au-dessus du bloc post_comment -->
        <FrameLayout
            android:id="@+id/mentionSuggestionsContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:background="@color/beige_clair"
            app:layout_constraintBottom_toTopOf="@+id/post_comment"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/mentionSuggestionsRecycler"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clipToPadding="false"
                android:padding="8dp"/>
        </FrameLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
