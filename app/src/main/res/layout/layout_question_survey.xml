<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/parent">

    <RadioButton
        android:id="@+id/ui_iv_check"
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:clickable="false"
        android:text="" />
    <TextView
        android:id="@+id/tv_question_survey"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/nunitosans_regular"
        tools:text="choice one"
        android:textColor="@color/pre_onboard_black"
        android:layout_marginStart="10dp"
        app:layout_constraintStart_toEndOf="@+id/ui_iv_check"
        app:layout_constraintTop_toTopOf="@+id/ui_iv_check"
        app:layout_constraintBottom_toBottomOf="@+id/ui_iv_check"
        android:textSize="15sp" />

    <ProgressBar
        android:id="@+id/progressBar3"
        style="?android:attr/progressBarStyleHorizontal"
        android:progressDrawable="@drawable/progressbar_style_survey"
        android:layout_width="0dp"
        android:layout_height="7dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_question_survey"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintStart_toStartOf="@+id/tv_question_survey"
        app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
        android:id="@+id/tv_number_answer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/nunitosans_regular"
        android:text="0"
        android:textColor="@color/pre_onboard_black"
        android:layout_marginStart="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/ui_iv_check"
        app:layout_constraintBottom_toBottomOf="@+id/ui_iv_check"
        android:textSize="13sp" />


</androidx.constraintlayout.widget.ConstraintLayout>