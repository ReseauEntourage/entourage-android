<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="title"
            type="java.lang.String" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/light_beige"
        android:paddingHorizontal="@dimen/padding_horizontal"
        android:paddingTop="20dp">

        <ImageView
            android:id="@+id/icon_back"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginBottom="11dp"
            android:padding="10dp"
            android:src="@drawable/new_back"
            app:layout_constraintBottom_toTopOf="@id/divider"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:src="@drawable/new_back" />
        
        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:id="@+id/iv_event"
            app:layout_constraintBottom_toTopOf="@id/divider"
            app:layout_constraintStart_toEndOf="@+id/icon_back"
            app:layout_constraintTop_toTopOf="parent"
            android:visibility="gone"
            tools:src="@drawable/new_calendar_white"
            tools:visibility="visible"
            />

        <TextView
            android:id="@+id/header_title"
            style="@style/h2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginBottom="11dp"
            android:maxLines="1"
            android:ellipsize="end"
            android:text='@{title.length() > 30 ? title.substring(0, 30).concat("…") : title}'
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/divider"
            app:layout_constraintStart_toEndOf="@+id/iv_event"
            app:layout_constraintEnd_toStartOf="@+id/card_icon_setting"
            tools:text="Un titre avec vraiment beaucoup de caractères pour test" />
        <TextView
            android:id="@+id/header_subtitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="11dp"
            android:text="@{title}"
            android:layout_marginStart="10dp"
            app:layout_constraintBottom_toTopOf="@id/divider"
            app:layout_constraintEnd_toStartOf="@+id/card_icon_setting"
            app:layout_constraintStart_toEndOf="@+id/iv_event"
            app:layout_constraintTop_toBottomOf="@+id/header_title"
            android:fontFamily="@font/nunitosans_regular"
            android:textSize="13sp"
            android:visibility="gone"
            android:textColor="@color/grey"
            tools:text="Notifications"
            tools:visibility="visible"/>
        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/card_icon_camera"
            android:layout_marginHorizontal="10dp"
            app:layout_constraintEnd_toStartOf="@+id/card_icon_setting"
            app:layout_constraintTop_toTopOf="@+id/icon_back"
            android:background="@color/orange"
            app:cardCornerRadius="20dp">
            <ImageView
                android:id="@+id/icon_camera"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:padding="10dp"
                android:background="@color/orange"
                android:src="@drawable/ic_camera"
                android:visibility="gone"
                />
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/card_icon_setting"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/icon_back"
            android:background="@color/orange"
            app:cardCornerRadius="20dp">
            <ImageView
                android:id="@+id/icon_settings"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:padding="10dp"
                android:background="@color/orange"
                android:src="@drawable/new_settings"
                android:visibility="gone"
                 />
        </androidx.cardview.widget.CardView>


        <View
            android:id="@+id/divider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/light_orange_opacity_50"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>