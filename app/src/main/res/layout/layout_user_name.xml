<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:gravity="center"
              android:orientation="vertical">

    <TextView
        android:id="@+id/user_name_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/role_padding_bottom"
        android:textColor="@color/profile_name"
        android:textSize="@dimen/entourage_font_big"
        android:textStyle="bold"
        tools:text="George"/>

    <LinearLayout
        android:id="@+id/user_name_tags_holder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="2dp"
        android:orientation="horizontal"
        android:visibility="gone"
        android:divider="@drawable/role_spacer"
        android:showDividers="middle">
    </LinearLayout>
</LinearLayout>