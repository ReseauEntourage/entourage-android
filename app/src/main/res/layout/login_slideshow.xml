<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                tools:context="social.entourage.android.authentication.login.slideshow.LoginSlideshowFragment">

    <android.support.v4.view.ViewPager
        android:id="@+id/login_slideshow_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <LinearLayout
        android:id="@+id/login_slideshow_indicator_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="150dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/slideshow_b1"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:contentDescription="@string/empty_description"
            app:srcCompat="@drawable/carousel_bullet_filled"/>

        <ImageView
            android:id="@+id/slideshow_b2"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:contentDescription="@string/empty_description"
            app:srcCompat="@drawable/carousel_bullet_empty"/>

        <ImageView
            android:id="@+id/slideshow_b3"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:contentDescription="@string/empty_description"
            app:srcCompat="@drawable/carousel_bullet_empty"/>

        <ImageView
            android:id="@+id/slideshow_b4"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:contentDescription="@string/empty_description"
            app:srcCompat="@drawable/carousel_bullet_empty"/>

    </LinearLayout>

</RelativeLayout>
