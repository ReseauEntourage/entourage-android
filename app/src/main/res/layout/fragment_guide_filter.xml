<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/pale_grey"
              tools:context="social.entourage.android.guide.filter.GuideFilterFragment">


    <social.entourage.android.tools.view.EntourageTitleView
        android:id="@+id/entourageTitleView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:entourageTitle="@string/guide_filter_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </social.entourage.android.tools.view.EntourageTitleView>

    <Button
        android:id="@+id/ui_bt_cancel"
        style="@style/TransparentButton"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginEnd="8dp"
        android:text="@string/button_reset_filters"
        android:textColor="@color/accent"
        app:layout_constraintBottom_toBottomOf="@+id/entourageTitleView"
        app:layout_constraintEnd_toEndOf="@+id/entourageTitleView"
        app:layout_constraintTop_toTopOf="@+id/entourageTitleView" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/ui_recyclerView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/constraintLayout11"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/entourageTitleView" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout11"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:background="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <View
            android:id="@+id/title_separator2"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/greyish"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/bottom_action_button"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/bg_button_accent_rounded"
            android:fontFamily="sans-serif"
            android:text="@string/register"
            android:textColor="@color/white"
            android:textSize="17sp"
            android:textAllCaps="false"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
