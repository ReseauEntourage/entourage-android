<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/background_organizer"
    android:padding="20dp">

    <ImageView
        android:id="@+id/iv_small_talk_ethic_icon"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginEnd="12dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/tv_small_talk_ethic_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Bienveillance"
        android:textColor="@color/black"
        android:fontFamily="@font/quicksand_bold"
        android:textSize="15sp"
        app:layout_constraintStart_toEndOf="@id/iv_small_talk_ethic_icon"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/tv_small_talk_ethic_desc"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Nous participons à cet échange avec une intention positive et respectueuse."
        android:fontFamily="@font/nunitosans_regular"
        android:textSize="15sp"
        android:textColor="@color/black"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/tv_small_talk_ethic_title"
        app:layout_constraintStart_toStartOf="@id/tv_small_talk_ethic_title"
        app:layout_constraintEnd_toEndOf="@id/tv_small_talk_ethic_title"
        app:layout_constraintBottom_toBottomOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>
