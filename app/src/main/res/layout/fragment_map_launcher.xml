<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_alignParentBottom="true"
    android:background="@color/background"
    android:gravity="center">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RadioGroup
            android:id="@+id/launcher_tour_type_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/background_dark"
            android:checkedButton="@+id/launcher_tour_type_feet">

            <RadioButton
                android:id="@+id/launcher_tour_type_feet"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:text="@string/tour_check_feet"
                android:background="@drawable/custom_radio_tab"
                android:button="@null"
                android:gravity="center"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="@color/abc_primary_text_material_dark"
                android:textAllCaps="true" />

            <View
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:background="@color/separator" />

            <RadioButton
                android:id="@+id/launcher_tour_type_car"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:text="@string/tour_check_car"
                android:background="@drawable/custom_radio_tab"
                android:button="@null"
                android:gravity="center"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="@color/abc_primary_text_material_dark"
                android:textAllCaps="true" />

        </RadioGroup>

    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="10dp"
        android:paddingLeft="50dp"
        android:paddingRight="50dp"
        android:gravity="center">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/background_dark"
            android:text="@string/tour_type"
            android:padding="10dp"
            android:textColor="@color/abc_primary_text_material_dark"
            android:textStyle="bold"
            android:textSize="12sp"
            android:textAllCaps="true" />

        <View
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:background="@color/custom_button_1_enabled"
            android:layout_marginBottom="0.5dp"/>

        <RadioGroup
            android:id="@+id/launcher_tour_type_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:background="@color/separator"
            android:checkedButton="@+id/launcher_tour_type_medical">

            <RadioButton
                android:id="@+id/launcher_tour_type_medical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/tour_type_medical"
                android:background="@drawable/custom_radio_spinner"
                android:button="@null"
                android:padding="10dp"
                android:layout_marginBottom="0.5dp"
                android:textSize="12sp"
                android:textColor="@color/abc_primary_text_material_dark"/>

            <RadioButton
                android:id="@+id/launcher_tour_type_bare_hands"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/tour_type_bare_hands"
                android:background="@drawable/custom_radio_spinner"
                android:button="@null"
                android:padding="10dp"
                android:layout_marginBottom="0.5dp"
                android:textSize="12sp"
                android:textColor="@color/abc_primary_text_material_dark"/>

            <RadioButton
                android:id="@+id/launcher_tour_type_alimentary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/tour_type_alimentary"
                android:background="@drawable/custom_radio_spinner"
                android:button="@null"
                android:padding="10dp"
                android:textSize="12sp"
                android:textColor="@color/abc_primary_text_material_dark"/>

        </RadioGroup>

    </LinearLayout>

    <Button
        android:id="@+id/launcher_tour_go"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/custom_button_1"
        android:layout_margin="10dp"
        android:text="@string/tour_go"/>

</LinearLayout>