<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentEnd="true"
    android:layout_centerVertical="true"
    android:gravity="center_vertical"
    tools:showIn="@layout/fragment_entourage_information">

    <ImageButton
        android:id="@+id/entourage_info_description_button"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginEnd="5dp"
        android:background="?attr/selectableItemBackground"
        android:contentDescription="Information"
        android:scaleType="fitXY"
        android:tint="@color/accent"
        android:visibility="gone"
        app:srcCompat="@drawable/ic_info_white_24dp"
        tools:visibility="visible" />

    <ImageButton
        android:id="@+id/entourage_info_more_button"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="?attr/selectableItemBackground"
        android:contentDescription="Plus"
        android:scaleType="fitXY"
        android:tint="@color/accent"
        android:visibility="gone"
        app:srcCompat="@drawable/ic_more_3filleddots"
        tools:visibility="visible" />
</LinearLayout>