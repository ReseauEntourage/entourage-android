<?xml version="1.0" encoding="utf-8"?>
<GridLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/background"
    android:rowCount="5"
    android:columnCount="3"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:layout_marginBottom="10dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium Text"
        android:textColor="@color/greyish_brown"
        android:id="@+id/tour_card_title"
        android:layout_row="0"
        android:layout_columnSpan="2"/>

    <ImageView
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:id="@+id/tour_card_photo"
        android:layout_gravity="right"
        android:layout_rowSpan="2"
        android:src="@drawable/ic_user_photo_small"
        android:scaleType="centerInside"
        android:paddingTop="3dp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_columnSpan="2">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/greyish_brown"
            android:text="Small Text"
            android:id="@+id/tour_card_type"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/greyish_brown"
            android:textStyle="bold"
            android:text="Small Text"
            android:id="@+id/tour_card_author"/>
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="@color/greyish"
        android:text="Small Text"
        android:id="@+id/tour_card_location"
        android:layout_columnSpan="2"
        android:lines="1"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:orientation="horizontal">

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tour_card_badge_count"
            android:background="@drawable/bg_badge"
            android:text="1"
            android:gravity="center"
            android:minWidth="15dp"
            android:textSize="10sp"
            android:textColor="@color/white"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="5dp"
            android:visibility="gone"/>

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_friends"
            android:id="@+id/tour_card_people_image"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/greyish_brown"
            android:text="1"
            android:id="@+id/tour_card_people_count"
            android:paddingLeft="3dp"
            android:textStyle="bold"/>
    </LinearLayout>

    <RelativeLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="5"
        android:layout_columnSpan="3">

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="2dp"
            android:id="@+id/tour_card_divider"
            android:background="@color/greyish"
            android:layout_gravity="fill_horizontal"
            android:layout_marginTop="25dp"/>

        <Button
            style="@style/ActButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tour_card_button_act"
            android:layout_centerInParent="true"
            android:enabled="false"/>
    </RelativeLayout>
</GridLayout>