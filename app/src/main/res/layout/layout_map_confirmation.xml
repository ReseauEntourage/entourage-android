<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/custom_popup"
    android:gravity="center">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="17dp"
        android:textStyle="bold"
        android:text="@string/tour_end_confirmation"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/confirmation_encounters"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:text="@string/tour_end_encounters"/>

        <TextView
            android:id="@+id/confirmation_distance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:text="@string/tour_end_distance"/>

        <TextView
            android:id="@+id/confirmation_duration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:text="@string/tour_end_duration"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button
            android:id="@+id/confirmation_resume_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Reprendre"
            android:layout_margin="2dp"
            android:background="@drawable/custom_button_yellow"/>

        <Button
            android:id="@+id/confirmation_end_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:text="Terminer"
            android:background="@drawable/custom_button_yellow"/>

    </LinearLayout>

</LinearLayout>