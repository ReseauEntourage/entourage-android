<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="150dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/bg_button_rounded_white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/ui_action_tv_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="15dp"
            android:ellipsize="end"
            android:fontFamily="sans-serif-medium"
            android:maxLines="2"
            android:text="Type\n L2 blabla bleddg sgsdgnj sdgjskhgjsghs"
            android:textColor="@color/action_type_outing"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/ui_action_tv_info"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginBottom="8dp"
            android:ellipsize="end"
            android:fontFamily="sans-serif"
            android:maxLines="2"
            android:text="Type\nLigne2"
            android:textColor="@color/action_type_outing"
            android:textSize="16sp"
            app:layout_constraintBottom_toTopOf="@+id/ui_action_tv_location"
            app:layout_constraintEnd_toStartOf="@+id/ui_action_picto_type3"
            app:layout_constraintStart_toEndOf="@+id/ui_action_picto_info" />

        <TextView
            android:id="@+id/ui_action_tv_location"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="15dp"
            android:ellipsize="end"
            android:fontFamily="sans-serif"
            android:maxLines="2"
            android:text="Type"
            android:textColor="@color/action_type_outing"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="@+id/ui_action_picto_location"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/ui_action_picto_location"
            app:layout_constraintTop_toTopOf="@+id/ui_action_picto_location" />

        <ImageView
            android:id="@+id/ui_action_picto_info"
            android:layout_width="24dp"
            android:layout_height="20dp"
            app:layout_constraintBottom_toBottomOf="@+id/ui_action_tv_info"
            app:layout_constraintStart_toStartOf="@+id/ui_action_tv_title"
            app:layout_constraintTop_toTopOf="@+id/ui_action_tv_info"
            app:srcCompat="@drawable/ic_event_accent_24dp" />

        <ImageView
            android:id="@+id/ui_action_picto_location"
            android:layout_width="24dp"
            android:layout_height="20dp"
            android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@+id/ui_action_picto_info"
            app:srcCompat="@drawable/ic_location_gds_detail" />

        <ImageView
            android:id="@+id/ui_action_picto_type3"
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:layout_marginEnd="30dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_home_arrow_show_orange" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>