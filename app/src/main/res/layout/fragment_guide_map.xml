<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent" android:layout_height="match_parent">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:id="@+id/fragment_guide_map_layout"
        android:layout_above="@+id/fragment_guide_filter_layout">

        <fragment android:id="@+id/fragment_map"
                  android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  class="com.google.android.gms.maps.SupportMapFragment"
                  android:layout_marginLeft="0dp"
                  android:layout_marginTop="0dp"/>

    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/fragment_guide_empty_list_popup"
        android:layout_alignParentTop="true"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginEnd="50dp"
        android:layout_marginStart="50dp"
        android:background="@drawable/rounded_dialog"
        android:orientation="vertical"
        android:elevation="2dp"
        android:visibility="gone"
        >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/fragment_guide_empty_list_popup_close"
            android:padding="3dp"
            android:layout_marginLeft="3dp"
            android:layout_marginTop="3dp"
            android:src="@drawable/ic_close_white"/>

        <TextView
            android:text="@string/map_poi_empty_popup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/fragment_guide_empty_list_popup_text"
            android:paddingBottom="15dp"
            android:paddingEnd="10dp"
            android:paddingRight="10dp"
            android:paddingLeft="10dp"
            android:paddingStart="10dp"
            android:paddingTop="4dp"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:gravity="center_horizontal"
            android:textColorLink="@color/white"
            android:textColorHint="@color/white"/>
    </LinearLayout>

    <include
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        layout="@layout/layout_guide_longclick"
        android:id="@+id/fragment_guide_longclick"
        android:visibility="gone"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:background="@color/background"
        android:id="@+id/fragment_guide_filter_layout">

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/greyish"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"/>

        <ImageButton
            android:id="@+id/fragment_guide_filter_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:background="?android:attr/selectableItemBackground"
            android:padding="5dp"
            android:src="@drawable/ic_filters"/>

        <ImageButton
            android:id="@+id/fragment_guide_follow_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_toEndOf="@+id/fragment_guide_filter_button"
            android:layout_toRightOf="@+id/fragment_guide_filter_button"
            android:background="?android:attr/selectableItemBackground"
            android:padding="5dp"
            android:src="@drawable/ic_geoloc"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:id="@+id/fragment_guide_bottom_title"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:textColor="@color/greyish_brown"
            android:textSize="14sp"
            android:text="@string/map_poi_bottom_title"/>

    </RelativeLayout>

</RelativeLayout>