<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="4dp"
    android:background="@drawable/new_bg_rounded_shadow"
    android:elevation="2dp"
    android:gravity="center_vertical"
    android:outlineAmbientShadowColor="@color/orange"
    android:outlineSpotShadowColor="@color/orange"
    android:paddingHorizontal="19dp"
    android:paddingVertical="13dp"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintTop_toTopOf="parent">

    <ImageView
        android:id="@+id/image"
        android:layout_width="77dp"
        android:layout_height="46dp"
        android:layout_marginRight="12dp"
        android:background="@drawable/bg_round_4dp_beige"
        android:src="@drawable/new_illu_empty_state_event" />

    <TextView
        android:id="@+id/title"
        style="@style/left_courant_black"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:maxLines="2"
        tools:text="Rejoignez le groupe «Dansons ensemble»" />

    <ImageView
        android:id="@+id/moderator_icon"
        android:layout_width="13dp"
        android:layout_height="13dp"
        android:layout_gravity="center"
        android:elevation="1dp"
        android:src="@drawable/ic_forward" />

</LinearLayout>

