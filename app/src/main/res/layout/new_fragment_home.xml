<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/beige"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingHorizontal="26dp"
            android:paddingVertical="10dp">


            <ImageView
                android:id="@+id/logoEntourage"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:elevation="1dp"
                android:src="@drawable/ic_entourage_logo_orange" />

            <TextView
                android:id="@+id/welcome_user"
                style="@style/left_h2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_weight="1"
                android:maxLines="2"
                android:paddingBottom="3dp"
                android:paddingHorizontal="16dp"
                tools:text="Bienvenue !"/>


            <ImageButton
                android:id="@+id/image_user"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:background="@drawable/new_shadow"
                android:elevation="1dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/contributions"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingHorizontal="26dp"
            android:paddingTop="32dp">

            <TextView
                android:id="@+id/contributions_title"
                style="@style/left_courant_bold_black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="2"
                android:paddingBottom="12dp"
                android:text="@{@string/contributions_title}"
                tools:text="Vos contributions au rÃ©seau entourage :" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="12dp" />

            <LinearLayout
                android:id="@+id/meeting_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/new_bg_rounded_white"
                android:paddingBottom="4dp"
                android:orientation="horizontal"
                android:weightSum="2">

                <LinearLayout
                    android:id="@+id/meeting_informations"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingHorizontal="22dp"
                    android:paddingVertical="16dp"
                    android:layout_weight="0.5">

                    <TextView
                        android:id="@+id/meeting_label"
                        style="@style/left_courant_bold_black"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:maxLines="2"
                        android:text="@string/contributions_meeting_empty" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/heart_icon"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            app:srcCompat="@drawable/new_heart_icon_red" />

                        <ImageView
                            android:id="@+id/heart_icon_empty"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:visibility="gone"
                            app:srcCompat="@drawable/new_heart_icon_grey" />

                        <TextView
                            android:id="@+id/meeting_value"
                            style="@style/left_large_bold_black"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text=""
                            android:paddingLeft="6dp"
                            tools:text="45" />

                    </LinearLayout>

                </LinearLayout>

                <ImageView
                    android:id="@+id/meeting_icon"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    app:srcCompat="@drawable/hub_number4"
                    android:layout_weight="1.5"/>

            </LinearLayout>

            <Space
                android:layout_width="match_parent"
                android:layout_height="12dp" />

            <LinearLayout
                android:id="@+id/contribution_cards"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="3">

                <include
                    android:id="@+id/message_card"
                    layout="@layout/new_home_small_card"
                    android:layout_width="0dp"
                    android:layout_height="92dp"
                    android:layout_marginRight="8dp"
                    android:layout_weight="1"
                    app:emptyLabel="@{@string/contributions_message_empty}"
                    app:icon="@{@drawable/new_icon_home_empty_messages}"
                    app:label="@{@string/contributions_message}" />

                <include
                    android:id="@+id/event_card"
                    layout="@layout/new_home_small_card"
                    android:layout_width="0dp"
                    android:layout_height="92dp"
                    android:layout_marginHorizontal="8dp"
                    android:layout_weight="1"
                    app:emptyLabel="@{@string/contributions_event_empty}"
                    app:icon="@{@drawable/new_icon_home_empty_event}"
                    app:label="@{@string/contributions_event}" />

                <include
                    android:id="@+id/group_card"
                    layout="@layout/new_home_small_card"

                    android:layout_width="0dp"
                    android:layout_height="92dp"
                    android:layout_marginLeft="8dp"
                    android:layout_weight="1"
                    app:emptyLabel="@{@string/contributions_group_empty}"
                    app:icon="@{@drawable/new_icon_home_empty_groupes}"
                    app:label="@{@string/contributions_group}" />
            </LinearLayout>


        </LinearLayout>

    </LinearLayout>
</layout>