<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/mainprofile_background"
              android:orientation="vertical">

    <TextView
        android:id="@+id/mainprofile_app_version"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/mainprofile_item_background"
        android:minHeight="50dp"
        android:gravity="center_horizontal"
        android:textColor="@color/mainprofile_item_text_color"
        android:textSize="@dimen/entourage_font_small"/>

    <TextView
        android:id="@+id/mainprofile_app_debug_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        android:background="@color/mainprofile_item_background"
        android:gravity="center_horizontal"
        android:textColor="@color/mainprofile_item_text_color" />
</LinearLayout>