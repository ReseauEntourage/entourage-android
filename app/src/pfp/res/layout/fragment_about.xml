<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="social.entourage.android.about.AboutFragment"
    android:orientation="vertical"
    android:background="@color/background">

    <social.entourage.android.view.EntourageTitleView
        android:id="@+id/about_title_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:entourageTitle="@string/about_title"/>

    <View
        android:id="@+id/about_separator_top"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        />

    <RelativeLayout
        android:id="@+id/about_version_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/sidemenu_item_background"
        android:paddingBottom="@dimen/about_items_padding"
        android:paddingEnd="0dp"
        android:paddingLeft="@dimen/about_items_padding"
        android:paddingRight="0dp"
        android:paddingStart="@dimen/about_items_padding"
        android:paddingTop="@dimen/about_items_padding">

        <TextView
            android:id="@+id/about_version_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:text="@string/about_version"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/sidemenu_item_text_color"
            android:textSize="@dimen/entourage_font_medium"/>

        <TextView
            android:id="@+id/about_version"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:layout_toEndOf="@+id/about_version_description"
            android:layout_toLeftOf="@+id/about_arrow_version"
            android:layout_toRightOf="@+id/about_version_description"
            android:layout_toStartOf="@+id/about_arrow_version"
            android:gravity="end"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/accent_dark"
            android:textSize="@dimen/entourage_font_medium"/>

        <ImageView
            android:id="@+id/about_arrow_version"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:contentDescription="@string/empty_description"
            android:src="@drawable/arrow_grey"
            android:tint="@color/accent_dark"/>
    </RelativeLayout>

    <View
        android:id="@+id/about_separator_version"
        style="@style/SeparatorAlpha"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="@dimen/about_items_padding"
        android:layout_marginStart="@dimen/about_items_padding"
        android:background="@color/background"/>

    <LinearLayout
        android:id="@+id/about_conditions_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/sidemenu_item_background"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/about_items_padding"
        android:paddingEnd="0dp"
        android:paddingLeft="@dimen/about_items_padding"
        android:paddingRight="0dp"
        android:paddingStart="@dimen/about_items_padding"
        android:paddingTop="@dimen/about_items_padding">

        <TextView
            android:id="@+id/about_conditions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="@string/about_conditions"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/sidemenu_item_text_color"
            android:textSize="@dimen/entourage_font_medium"/>

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:contentDescription="@string/empty_description"
            android:scaleType="fitEnd"
            android:src="@drawable/arrow_grey"
            android:tint="@color/accent_dark"/>
    </LinearLayout>

    <View
        android:id="@+id/about_separator_conditions"
        style="@style/SeparatorAlpha"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="@dimen/about_items_padding"
        android:layout_marginStart="@dimen/about_items_padding"
        android:background="@color/background"/>

    <LinearLayout
        android:id="@+id/about_privacy_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/sidemenu_item_background"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/about_items_padding"
        android:paddingEnd="0dp"
        android:paddingLeft="@dimen/about_items_padding"
        android:paddingRight="0dp"
        android:paddingStart="@dimen/about_items_padding"
        android:paddingTop="@dimen/about_items_padding">

        <TextView
            android:id="@+id/about_privacy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="@string/about_privacy"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/sidemenu_item_text_color"
            android:textSize="@dimen/entourage_font_medium"/>

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:contentDescription="@string/empty_description"
            android:scaleType="fitEnd"
            android:src="@drawable/arrow_grey"
            android:tint="@color/accent_dark"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/about_logo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="@dimen/about_items_padding"
            android:contentDescription="@string/empty_description"
            android:src="@drawable/entourage_logo"/>
    </LinearLayout>

</LinearLayout>
