<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/sidemenu_background"
    android:orientation="vertical"
    android:id="@+id/sideMenuCoordinatorLayout">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/sidemenuitems_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/sidemenu_item_background">

                <ImageView
                    android:id="@+id/drawer_header_user_photo"
                    android:layout_width="136dp"
                    android:layout_height="136dp"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="15dp"
                    android:contentDescription="@string/empty_description"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_user_photo"/>

                <social.entourage.android.view.PartnerLogoImageView
                    android:id="@+id/drawer_header_user_partner_logo"
                    android:layout_width="63dp"
                    android:layout_height="63dp"
                    android:layout_alignBottom="@+id/drawer_header_user_photo"
                    android:layout_alignEnd="@+id/drawer_header_user_photo"
                    android:layout_alignRight="@+id/drawer_header_user_photo"
                    android:layout_marginBottom="-6dp"
                    android:layout_marginEnd="-6dp"
                    android:layout_marginRight="-6dp"/>

                <TextView
                    android:id="@+id/drawer_header_user_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/drawer_header_user_photo"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="5dp"
                    android:gravity="center"
                    android:textColor="@android:color/black"
                    android:textColorHint="@color/greyish_brown"
                    android:textSize="@dimen/entourage_font_big"/>

                <TextView
                    android:id="@+id/action_edit_profile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/drawer_header_user_name"
                    android:layout_marginBottom="10dp"
                    android:clickable="true"
                    android:gravity="center_horizontal"
                    android:text="@string/action_edit_profile"
                    android:textColor="@color/accent"
                    android:textSize="@dimen/entourage_font_medium"
                    />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/white"
                />

            <social.entourage.android.sidemenu.SideMenuItemView
                android:id="@+id/action_user"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:visibility="gone">

            </social.entourage.android.sidemenu.SideMenuItemView>

            <social.entourage.android.sidemenu.SideMenuItemView
                android:id="@+id/action_update_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/sidemenu_item_background"
                android:icon="@drawable/ic_menu_heart"
                android:minHeight="50dp"
                android:textColor="@color/sidemenu_item_text_color"
                android:textSize="@dimen/entourage_font_large"
                android:title="@string/action_update_info"
                android:visibility="visible"
                app:showDivider="true"/>

            <social.entourage.android.sidemenu.SideMenuItemView
                android:id="@+id/action_contact"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/sidemenu_item_background"
                android:icon="@drawable/ic_question_chat"
                android:minHeight="50dp"
                android:textColor="@color/sidemenu_item_text_color"
                android:textSize="@dimen/entourage_font_large"
                android:title="@string/action_contact"
                app:iconTint="@color/accent"/>

            <social.entourage.android.sidemenu.SideMenuItemView
                android:id="@+id/action_feedback"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/sidemenu_item_background"
                android:icon="@drawable/ic_star"
                android:minHeight="50dp"
                android:textColor="@color/sidemenu_item_text_color"
                android:textSize="@dimen/entourage_font_large"
                android:title="@string/action_feedback"/>

            <social.entourage.android.sidemenu.SideMenuItemView
                android:id="@+id/action_propose"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/sidemenu_item_background"
                android:icon="@drawable/ic_menu_propose"
                android:textColor="@color/sidemenu_item_text_color"
                android:textSize="@dimen/entourage_font_large"
                android:title="@string/action_propose"
                android:visibility="gone"
                app:iconTint="@color/accent"
                app:showDivider="true"/>

            <social.entourage.android.sidemenu.SideMenuItemView
                android:id="@+id/action_charte"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/sidemenu_item_background"
                android:icon="@drawable/ic_charte"
                android:minHeight="50dp"
                android:textColor="@color/sidemenu_item_text_color"
                android:textSize="@dimen/entourage_font_large"
                android:title="@string/action_charter_unsigned"
                app:iconTint="@color/accent"
                app:showDivider="true"/>

            <social.entourage.android.sidemenu.SideMenuItemView
                android:id="@+id/action_how_to"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/sidemenu_item_background"
                android:icon="@drawable/ic_phone_square"
                android:minHeight="50dp"
                android:textColor="@color/sidemenu_item_text_color"
                android:textSize="@dimen/entourage_font_large"
                android:title="@string/action_how_to"
                app:iconTint="@color/accent"/>

            <social.entourage.android.sidemenu.SideMenuItemView
                android:id="@+id/action_about"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/sidemenu_item_background"
                android:icon="@drawable/ic_info_outline_black_24dp"
                android:minHeight="50dp"
                android:textColor="@color/sidemenu_item_text_color"
                android:textSize="@dimen/entourage_font_large"
                android:title="@string/action_about"
                app:iconTint="@color/accent"/>

            <social.entourage.android.sidemenu.SideMenuItemView
                android:id="@+id/action_logout"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/sidemenu_item_background"
                android:textColor="@color/accent"
                android:textSize="@dimen/entourage_font_large"
                android:title="@string/action_logout"
                app:centerText="true"
                app:showDivider="false"
                app:showRightArrow="false"
                app:textBackground="@drawable/bg_button_white_accent_rounded"/>

            <include layout="@layout/layout_side_menu_appversion" />

        </LinearLayout>
    </ScrollView>
</androidx.coordinatorlayout.widget.CoordinatorLayout>