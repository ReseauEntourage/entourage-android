<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/background"
                android:padding="16dp"
                android:layout_marginBottom="10dp">

    <ImageView
        android:id="@+id/tour_card_icon"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_centerVertical="true"
        android:background="@drawable/bg_feeditem_icon"
        android:contentDescription="@string/empty_description"
        android:padding="3dp"/>

    <TextView
        android:id="@+id/tour_card_last_update_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:textColor="@color/greyish_brown"
        android:textSize="@dimen/entourage_font_medium"
        tools:text="17h30"/>

    <TextView
        android:id="@+id/tour_card_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/tour_card_icon"
        android:layout_toLeftOf="@+id/tour_card_last_update_date"
        android:layout_toRightOf="@+id/tour_card_icon"
        android:layout_toStartOf="@+id/tour_card_last_update_date"
        android:drawablePadding="@dimen/entourage_category_icon_padding"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:maxLines="1"
        android:paddingEnd="5dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:paddingStart="5dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/greyish_brown"
        android:textSize="@dimen/entourage_font_large"
        android:textStyle="bold"
        tools:text="Les amis de Buz with a long text"/>

    <TextView
        android:id="@+id/tour_card_last_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tour_card_title"
        android:layout_marginTop="2dp"
        android:layout_toEndOf="@+id/tour_card_icon"
        android:layout_toRightOf="@+id/tour_card_icon"
        android:ellipsize="end"
        android:maxLines="1"
        android:paddingEnd="5dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:paddingStart="5dp"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="@color/black"
        android:textSize="@dimen/entourage_font_small"
        tools:text="Someone here ? I need to write something long"/>

</RelativeLayout>